xml
<buvi>
  <model id="WebsiteForum.ForumPost" name="ForumPost" description="Forum Post">
    <field name="Name" type="string" label="Title" required="true" />
    <field name="Forum" type="WebsiteForum.ForumForum" label="Forum" required="true" />
    <field name="Content" type="html" label="Content" stripStyle="true" />
    <field name="PlainContent" type="text" label="Plain Content" store="true" />
    <field name="Tags" type="WebsiteForum.ForumTag" collection="true" label="Tags" />
    <field name="State" type="selection" label="Status" default="active">
      <option value="active" name="Active" />
      <option value="pending" name="Waiting Validation" />
      <option value="close" name="Closed" />
      <option value="offensive" name="Offensive" />
      <option value="flagged" name="Flagged" />
    </field>
    <field name="Views" type="integer" label="Views" default="0" readonly="true" />
    <field name="Active" type="bool" label="Active" default="true" />
    <field name="WebsiteMessage" type="Website.WebsiteMessage" collection="true" readonly="true" />
    <field name="WebsiteUrl" type="string" label="Website URL" readonly="true" />
    <field name="Website" type="Website.Website" readonly="true" />
    <field name="CreateDate" type="datetime" label="Asked on" index="true" readonly="true" />
    <field name="CreateUid" type="Res.Users" label="Created by" index="true" readonly="true" />
    <field name="WriteDate" type="datetime" label="Updated on" index="true" readonly="true" />
    <field name="LastActivityDate" type="datetime" label="Last activity on" readonly="true" required="true" default="now" />
    <field name="WriteUid" type="Res.Users" label="Updated by" index="true" readonly="true" />
    <field name="Relevancy" type="float" label="Relevance" store="true" />
    <field name="Vote" type="WebsiteForum.ForumPostVote" collection="true" label="Votes" />
    <field name="UserVote" type="integer" label="My Vote" />
    <field name="VoteCount" type="integer" label="Total Votes" store="true" />
    <field name="Favourite" type="Res.Users" collection="true" label="Favourite" />
    <field name="UserFavourite" type="bool" label="Is Favourite" />
    <field name="FavouriteCount" type="integer" label="Favorite" store="true" />
    <field name="IsCorrect" type="bool" label="Correct" />
    <field name="Parent" type="WebsiteForum.ForumPost" label="Question" readonly="true" />
    <field name="SelfReply" type="bool" label="Reply to own question" store="true" />
    <field name="Child" type="WebsiteForum.ForumPost" collection="true" label="Post Answers" />
    <field name="ChildCount" type="integer" label="Answers" store="true" />
    <field name="UidHasAnswered" type="bool" label="Has Answered" />
    <field name="HasValidatedAnswer" type="bool" label="Is answered" store="true" />
    <field name="FlagUserId" type="Res.Users" label="Flagged by" />
    <field name="ModeratorId" type="Res.Users" label="Reviewed by" readonly="true" />
    <field name="ClosedReason" type="WebsiteForum.ForumPostReason" label="Reason" />
    <field name="ClosedUid" type="Res.Users" label="Closed by" readonly="true" />
    <field name="ClosedDate" type="datetime" label="Closed on" readonly="true" />
    <field name="KarmaAccept" type="integer" label="Convert comment to answer" />
    <field name="KarmaEdit" type="integer" label="Karma to edit" />
    <field name="KarmaClose" type="integer" label="Karma to close" />
    <field name="KarmaUnlink" type="integer" label="Karma to unlink" />
    <field name="KarmaComment" type="integer" label="Karma to comment" />
    <field name="KarmaCommentConvert" type="integer" label="Karma to convert comment to answer" />
    <field name="KarmaFlag" type="integer" label="Flag a post as offensive" />
    <field name="CanAsk" type="bool" label="Can Ask" />
    <field name="CanAnswer" type="bool" label="Can Answer" />
    <field name="CanAccept" type="bool" label="Can Accept" />
    <field name="CanEdit" type="bool" label="Can Edit" />
    <field name="CanClose" type="bool" label="Can Close" />
    <field name="CanUnlink" type="bool" label="Can Unlink" />
    <field name="CanUpvote" type="bool" label="Can Upvote" />
    <field name="CanDownvote" type="bool" label="Can Downvote" />
    <field name="CanComment" type="bool" label="Can Comment" />
    <field name="CanCommentConvert" type="bool" label="Can Convert to Comment" />
    <field name="CanView" type="bool" label="Can View" />
    <field name="CanDisplayBiography" type="bool" label="Is the author's biography visible from his post" />
    <field name="CanPost" type="bool" label="Can Automatically be Validated" />
    <field name="CanFlag" type="bool" label="Can Flag" />
    <field name="CanModerate" type="bool" label="Can Moderate" />
    <field name="CanUseFullEditor" type="bool" label="Can Use Full Editor" />
  </model>

  <optionset id="WebsiteForum.ForumPostState" name="Forum Post State">
    <option value="active" name="Active" />
    <option value="pending" name="Waiting Validation" />
    <option value="close" name="Closed" />
    <option value="offensive" name="Offensive" />
    <option value="flagged" name="Flagged" />
  </optionset>
</buvi>
