xml
<buvi>
    <model id="Hr.Employee" name="Employee" description="Employee" inherits="Hr.Employee">
        <field name="EmployeeCarsCount" type="integer" label="Cars" compute="_ComputeEmployeeCarsCount" groups="Fleet.FleetGroupManager" />
        <field name="CarIds" type="Fleet.Vehicle" label="Vehicles (private)" relation="Driver" groups="Fleet.FleetGroupManager,Hr.GroupHrUser" />
        <field name="LicensePlate" type="string" compute="_ComputeLicensePlate" search="_SearchLicensePlate" groups="Hr.GroupHrUser" />
        <field name="MobilityCard" type="string" groups="Fleet.FleetGroupUser" />
    </model>

    <model id="Hr.EmployeePublic" name="EmployeePublic" description="Public Employee" inherits="Hr.EmployeePublic">
        <field name="MobilityCard" type="string" readonly="true" />
    </model>
</buvi>
