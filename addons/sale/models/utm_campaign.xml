<buvi>
  <model id="Sale.UtmCampaign" name="UtmCampaign" description="UTM Campaign">
    <field name="QuotationCount" type="integer" label="Quotation Count" compute="ComputeQuotationCount" compute_sudo="true" groups="SalesTeam.GroupSaleSalesman"/>
    <field name="InvoicedAmount" type="integer" label="Revenues generated by the campaign" compute="ComputeSaleInvoicedAmount" compute_sudo="true" groups="SalesTeam.GroupSaleSalesman"/>
