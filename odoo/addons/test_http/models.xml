xml
<buvi>
  <model id="TestHttp.Stargate" name="Stargate" description="Stargate">
    <field name="Name" type="string" required="true" label="Name" readonly="false" />
    <field name="Address" type="string" required="true" label="Address" />
    <field name="SgcDesignation" type="string" label="Sgc Designation" />
    <field name="GalaxyId" type="TestHttp.Galaxy" required="true" label="Galaxy" />
    <field name="HasGalaxyCrystal" type="bool" label="Has Galaxy Crystal" readonly="false" />
    <field name="GlyphAttach" type="image" attachment="true" label="Glyph Attach" />
    <field name="GlyphInline" type="image" attachment="false" label="Glyph Inline" />
    <field name="GalaxyPicture" type="image" related="GalaxyId.Picture" attachment="true" store="false" label="Galaxy Picture" />
    <constraint name="AddressLength" check="LENGTH(Address) = 6" message="Local addresses have 6 glyphs" />
  </model>
  <model id="TestHttp.Galaxy" name="Galaxy" description="Galaxy">
    <field name="Name" type="string" required="true" label="Name" help="The galaxy common name." />
    <field name="TranslatedName" type="string" label="Translated Name" translate="true" />
    <field name="Picture" type="image" attachment="true" label="Picture" groups="Base.GroupUser" />
  </model>
</buvi>
