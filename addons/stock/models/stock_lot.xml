xml
<buvi>
    <model id="Stock.StockLot" name="StockLot" description="Lot/Serial">
        <field name="Name" type="string" label="Lot/Serial Number" required="true" help="Unique Lot/Serial Number" index="trigram" default="Env.Sequence.NextByCode('stock.lot.serial')" />
        <field name="Ref" type="string" label="Internal Reference" help="Internal reference number in case it differs from the manufacturer's lot/serial number" />
        <field name="ProductId" type="Product.Product" label="Product" index="true" required="true" check_company="true"
               domain="[('Tracking', '!=', 'none'), ('IsStorable', '=', True)] + ([('ProductTemplateId', '=', context['default_product_tmpl_id'])] if context.get('default_product_tmpl_id') else [])" />
        <field name="ProductUomId" type="Uom.Uom" label="Unit of Measure" related="ProductId.UomId" store="true" />
        <field name="QuantIds" type="Stock.Quant" collection="true" label="Quants" readonly="true" />
        <field name="ProductQty" type="float" label="On Hand Quantity" compute="ComputeProductQty" search="SearchProductQty" />
        <field name="Note" type="html" label="Description" />
        <field name="DisplayComplete" type="bool" compute="ComputeDisplayComplete" />
        <field name="CompanyId" type="Res.Company" label="Company" index="true" store="true" readonly="false" compute="ComputeCompanyId" />
        <field name="DeliveryIds" type="Stock.Picking" collection="true" label="Transfers" compute="ComputeDeliveryIds" />
        <field name="DeliveryCount" type="integer" label="Delivery order count" compute="ComputeDeliveryIds" />
        <field name="LastDeliveryPartnerId" type="Res.Partner" compute="ComputeLastDeliveryPartnerId" />
        <field name="LotProperties" type="properties" label="Properties" definition="ProductId.LotPropertiesDefinition" copy="true" />
        <field name="LocationId" type="Stock.Location" label="Location" compute="ComputeSingleLocation" store="true" readonly="false" inverse="SetSingleLocation"
               domain="[('Usage', '!=', 'view')]" group_expand="ReadGroupLocationId" />
    </model>
</buvi>
