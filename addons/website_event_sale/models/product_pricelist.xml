<buvi>
  <model id="WebsiteEventSale.PricelistItem" name="WebsiteEventSale.PricelistItem" description="Pricelist Item">
    <field name="AppliedOn" type="WebsiteEventSale.PricelistItemAppliedOn" label="Applied On" />
    <field name="ProductId" type="Product.Product" label="Product" />
    <field name="ProductTemplateId" type="Product.Template" label="Product Template" />
    <field name="MinQuantity" type="integer" label="Minimum Quantity" />
    <relation name="Prices" collection="true" />
    <method name="OnchangeEventSaleWarning" onchange="AppliedOn, ProductId, ProductTemplateId, MinQuantity" />
  </model>

  <optionset id="WebsiteEventSale.PricelistItemAppliedOn" name="Pricelist Item Applied On">
    <option value="3_global" name="Global" />
    <option value="2_product_category" name="Product Category" />
    <option value="1_product" name="Product" />
    <option value="0_product_variant" name="Product Variant" />
  </optionset>
</buvi>
