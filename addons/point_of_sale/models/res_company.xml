xml
<buvi>
  <model id="PointOfSale.ResCompany" name="ResCompany" description="ResCompany">
    <field name="PointOfSaleUpdateStockQuantities" type="PointOfSale.PointOfSaleUpdateStockQuantities" label="Update quantities in stock" default="closing" />
    <field name="PointOfSaleUseTicketQrCode" type="bool" label="Self-service invoicing" />
    <field name="PointOfSaleTicketUniqueCode" type="bool" label="Generate a code on ticket" />
    <field name="PointOfSaleTicketPortalUrlDisplayMode" type="PointOfSale.PointOfSaleTicketPortalUrlDisplayMode" label="Print" required="true" default="qr_code" />
    <field name="PointOfSaleShowPredefinedScenarios" type="bool" label="Show Predefined Scenarios" default="true" />
  </model>

  <optionset id="PointOfSale.PointOfSaleUpdateStockQuantities" name="PointOfSaleUpdateStockQuantities">
    <option value="closing" name="At the session closing (faster)" />
    <option value="real" name="In real time (accurate but slower)" />
  </optionset>

  <optionset id="PointOfSale.PointOfSaleTicketPortalUrlDisplayMode" name="PointOfSaleTicketPortalUrlDisplayMode">
    <option value="qr_code" name="QR code" />
    <option value="url" name="URL" />
    <option value="qr_code_and_url" name="QR code + URL" />
  </optionset>
</buvi>
