<buvi>
  <model id="Mail.ResUsers" name="ResUsers" description="Users">
    <field name="NotificationType" type="Mail.NotificationType" label="Notification" required="true" default="Email" />
    <field name="Share" type="bool" label="Share" />
    <field name="GroupsId" type="Core.ResGroups" collection="true" />
    <unique>
      <field name="NotificationType" />
      <field name="Share" />
      <message>Only internal user can receive notifications in Odoo</message>
    </unique>
  </model>

  <optionset id="Mail.NotificationType" name="Notification Type">
    <option value="Email" name="Email" />
    <option value="Inbox" name="Inbox" />
  </optionset>
</buvi>
