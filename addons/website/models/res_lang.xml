xml
<buvi>
    <model id="Website.Lang" name="Lang" description="Website Language">
        <field name="Active" type="bool" default="true"
            help="Set active to false to hide the Website Language without removing it." />
        <field name="Name" type="string" label="Language Name" required="true" translate="true" />
        <field name="Code" type="string" label="Code" required="true" />
        <field name="Direction" type="string" label="Direction" />
        <field name="IsoCode" type="string" label="ISO Code" />
        <field name="Dateformat" type="string" label="Date Format" />
        <field name="Timeformat" type="string" label="Time Format" />
        <field name="WeekdayFormat" type="string" label="Weekday Format" />
        <field name="CodeNames" type="string" label="Code Names" />
        <field name="Translation" type="string" label="Translation" />
        <field name="PluralForm" type="string" label="Plural Form" />
        <field name="PhoneFormat" type="string" label="Phone Format" />
        <field name="Website" type="bool" label="Website" />
        <field name="WebsiteLanguages" type="Core.ResLang" collection="true" label="Website Languages" />
    </model>
</buvi>
