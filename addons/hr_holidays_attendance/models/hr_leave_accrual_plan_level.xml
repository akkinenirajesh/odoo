xml
<buvi>
    <model id="HrHolidaysAttendance.AccrualPlanLevel" name="AccrualPlanLevel" description="Accrual Plan Level">
        <field name="FrequencyHourlySource" type="HrHolidaysAttendance.FrequencyHourlySource" 
               label="Frequency Hourly Source" default="Calendar"
               help="If the source is set to 'Calendar', the amount of worked hours will be computed based on the Employee's working schedule. Otherwise, the amount of worked hours will be based on Attendance records." />
    </model>

    <optionset id="HrHolidaysAttendance.FrequencyHourlySource" name="Frequency Hourly Source">
        <option value="Calendar" name="Calendar" />
        <option value="Attendance" name="Attendances" />
    </optionset>
</buvi>
