xml
<buvi>
    <model id="Crm.Team" name="Team" description="Sales Team">
        <field name="UseLeads" type="bool" label="Leads" 
               help="Check this box to filter and qualify incoming requests as leads before converting them into opportunities and assigning them to a salesperson." />
        <field name="UseOpportunities" type="bool" label="Pipeline" default="true"
               help="Check this box to manage a presales process with opportunities." />
        <field name="AliasId" type="Mail.Alias" label="Alias"
               help="The email address associated with this channel. New emails received will automatically create new leads assigned to the channel." />
        <field name="AssignmentEnabled" type="bool" label="Lead Assign" compute="ComputeAssignmentEnabled" />
        <field name="AssignmentAutoEnabled" type="bool" label="Auto Assignment" compute="ComputeAssignmentEnabled" />
        <field name="AssignmentOptout" type="bool" label="Skip auto assignment" />
        <field name="AssignmentMax" type="integer" label="Lead Average Capacity" compute="ComputeAssignmentMax"
               help="Monthly average leads capacity for all salesmen belonging to the team" />
        <field name="AssignmentDomain" type="string" label="Assignment Domain"
               help="Additional filter domain when fetching unassigned leads to allocate to the team." />
        <field name="LeadUnassignedCount" type="integer" label="# Unassigned Leads" compute="ComputeLeadUnassignedCount" />
        <field name="LeadAllAssignedMonthCount" type="integer" label="# Leads/Opps assigned this month" compute="ComputeLeadAllAssignedMonthCount"
               help="Number of leads and opportunities assigned this last month." />
        <field name="LeadAllAssignedMonthExceeded" type="bool" label="Exceed monthly lead assignement" compute="ComputeLeadAllAssignedMonthCount"
               help="True if the monthly lead assignment count is greater than the maximum assignment limit, false otherwise." />
        <field name="OpportunitiesCount" type="integer" label="# Opportunities" compute="ComputeOpportunitiesData" />
        <field name="OpportunitiesAmount" type="decimal" label="Opportunities Revenues" compute="ComputeOpportunitiesData" />
        <field name="OpportunitiesOverdueCount" type="integer" label="# Overdue Opportunities" compute="ComputeOpportunitiesOverdueData" />
        <field name="OpportunitiesOverdueAmount" type="decimal" label="Overdue Opportunities Revenues" compute="ComputeOpportunitiesOverdueData" />
        <field name="LeadPropertiesDefinition" type="Core.PropertiesDefinition" label="Lead Properties" />
    </model>
</buvi>
