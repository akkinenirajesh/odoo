xml
<buvi>
  <model id="Base.ResUsers" name="ResUsers" description="User">
    <inherit id="Res.Partner" name="partner_id" />
    <field name="Login" type="string" label="Login" required="true" help="Used to log into the system" />
    <field name="Password" type="string" copy="false" help="Keep empty if you don't want the user to be able to connect on the system." />
    <field name="NewPassword" type="string" label="Set Password" help="Specify a value only when creating a user or if you're changing the user's password, otherwise leave empty. After a change of password, the user has to login again." />
    <field name="Signature" type="html" label="Email Signature" help="If specified, this action will be opened at log on for this user, in addition to the standard menu." readonly="false" store="true" />
    <field name="Active" type="bool" default="true" />
    <field name="ActivePartner" type="bool" related="PartnerId.Active" readonly="true" label="Partner is Active" />
    <field name="ActionId" type="Core.IrActionsActions" label="Home Action" help="If specified, this action will be opened at log on for this user, in addition to the standard menu." />
    <field name="GroupsId" type="Base.ResGroups" collection="true" label="Groups" />
    <field name="LogIds" type="Base.ResUsersLog" collection="true" label="User log entries" />
    <field name="LoginDate" type="datetime" label="Latest authentication" related="LogIds.CreateDate" readonly="false" />
    <field name="Share" type="bool" label="Share User" store="true" help="External user with limited access, created only for the purpose of sharing data." />
    <field name="CompaniesCount" type="integer" label="Number of Companies" />
    <field name="TzOffset" type="string" label="Timezone offset" />
    <field name="ResUsersSettingsIds" type="Base.ResUsersSettings" collection="true" />
    <field name="ResUsersSettingsId" type="Base.ResUsersSettings" label="Settings" />
    <field name="CompanyId" type="Core.ResCompany" label="Company" required="true" default="Env.Company.Id" help="The default company for this user." />
    <field name="CompanyIds" type="Core.ResCompany" collection="true" label="Companies" />
    <field name="Name" type="string" label="Name" related="PartnerId.Name" readonly="false" />
    <field name="Email" type="string" label="Email" related="PartnerId.Email" readonly="false" />
    <field name="AccessesCount" type="integer" label="# Access Rights" help="Number of access rights that apply to the current user" compute="ComputeAccessesCount" computeSudo="true" />
    <field name="RulesCount" type="integer" label="# Record Rules" help="Number of record rules that apply to the current user" compute="ComputeAccessesCount" computeSudo="true" />
    <field name="GroupsCount" type="integer" label="# Groups" help="Number of groups that apply to the current user" compute="ComputeAccessesCount" computeSudo="true" />
    <unique>
      <field name="Login" />
      <message>You can not have two users with the same login!</message>
    </unique>
  </model>

  <model id="Base.ResUsersLog" name="ResUsersLog" description="Users Log" order="Id desc">
    <field name="CreateUid" type="Base.ResUsers" />
    <field name="CreateDate" type="datetime" />
  </model>

  <model id="Base.ResUsersSettings" name="ResUsersSettings" description="Users Settings">
    <field name="UserId" type="Base.ResUsers" />
  </model>

  <model id="Base.ResGroups" name="ResGroups" description="Access Groups" order="Name">
    <field name="Name" type="string" label="Name" required="true" translate="true" />
    <field name="Users" type="Base.ResUsers" collection="true" />
    <field name="ModelAccess" type="Base.IrModelAccess" collection="true" label="Access Controls" copy="true" />
    <field name="RuleGroups" type="Base.IrRule" collection="true" label="Rules" domain="[('Global', '=', false)]" />
    <field name="MenuAccess" type="Core.IrUiMenu" collection="true" label="Access Menu" />
    <field name="ViewAccess" type="Core.IrUiView" collection="true" label="Views" />
    <field name="Comment" type="text" translate="true" />
    <field name="CategoryId" type="Core.IrModuleCategory" label="Application" index="true" />
    <field name="Color" type="integer" label="Color Index" />
    <field name="FullName" type="string" label="Group Name" compute="ComputeFullName" search="SearchFullName" />
    <field name="Share" type="bool" label="Share Group" help="Group created to set access rights for sharing data with some users." />
    <unique>
      <field name="CategoryId" />
      <field name="Name" />
      <message>The name of the group must be unique within an application!</message>
    </unique>
  </model>

  <model id="Base.ResUsersDeletion" name="ResUsersDeletion" description="Users Deletion Queue">
    <field name="UserId" type="Base.ResUsers" />
    <field name="State" type="selection" selection="[('todo', 'To Do'), ('done', 'Done')]" default="todo" />
  </model>

  <model id="Base.ChangePasswordWizard" name="ChangePasswordWizard" description="Change Password Wizard">
    <field name="UserIds" type="Base.ChangePasswordUser" collection="true" label="Users" />
  </model>

  <model id="Base.ChangePasswordUser" name="ChangePasswordUser" description="User, Change Password Wizard">
    <field name="WizardId" type="Base.ChangePasswordWizard" />
    <field name="UserId" type="Base.ResUsers" />
    <field name="UserLogin" type="string" label="User Login" readonly="true" />
    <field name="NewPasswd" type="string" label="New Password" />
  </model>

  <model id="Base.ChangePasswordOwn" name="ChangePasswordOwn" description="User, change own password wizard">
    <field name="NewPassword" type="string" label="New Password" />
    <field name="ConfirmPassword" type="string" label="New Password (Confirmation)" />
  </model>

  <model id="Base.APIKeysUser" name="APIKeysUser" description="Users API Keys">
    <field name="APIKeysIds" type="Base.APIKeys" collection="true" label="API Keys" />
  </model>

  <model id="Base.APIKeys" name="APIKeys" description="Users API Keys" auto="false" />

  <model id="Base.APIKeyDescription" name="APIKeyDescription" description="API Key Description">
    <field name="Name" type="string" label="Description" required="true" />
  </model>

  <model id="Base.APIKeyShow" name="APIKeyShow" description="Show API Key" abstract="true" />

  <optionset id="Account.AccountTagApplicability" name="AccountTagApplicability">
    <option value="Accounts" name="Accounts" />
    <option value="Taxes" name="Taxes" />
    <option value="Products" name="Products" />
  </optionset>
</buvi>
