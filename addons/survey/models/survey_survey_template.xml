xml
<buvi>
    <model id="Survey.SurveyTemplate" name="SurveyTemplate" description="Survey Template">
        <field name="SurveyType" type="Survey.SurveyType" />
        <field name="Title" type="string" label="Title" required="true" translate="true" />
        <field name="Description" type="html" label="Description" translate="true" />
        <field name="DescriptionDone" type="html" label="Description Done" translate="true" />
        <field name="ProgressionMode" type="Survey.ProgressionMode" />
        <field name="ScoringType" type="Survey.ScoringType" />
        <field name="QuestionsLayout" type="Survey.QuestionsLayout" />
        <field name="QuestionsSelection" type="Survey.QuestionsSelection" />
        <field name="Certification" type="bool" label="Certification" />
        <field name="AccessMode" type="Survey.AccessMode" />
        <field name="IsTimeLimited" type="bool" label="Is Time Limited" />
        <field name="TimeLimit" type="integer" label="Time Limit" />
        <field name="IsAttemptsLimited" type="bool" label="Is Attempts Limited" />
        <field name="AttemptsLimit" type="integer" label="Attempts Limit" />
        <field name="UsersCanGoBack" type="bool" label="Users Can Go Back" />
        <field name="SessionSpeedRating" type="bool" label="Session Speed Rating" />
        <field name="CertificationMailTemplate" type="Mail.MailTemplate" label="Certification Mail Template" />
        <field name="QuestionAndPageIds" type="survey.question" relation="one2many" collection="true" />
        <field name="RandomQuestionsCount" type="integer" label="Random Questions Count" />
        <field name="SuggestedAnswerIds" type="survey.question.answer" relation="one2many" collection="true" />
        <field name="MatrixRowIds" type="survey.question.answer" relation="one2many" collection="true" />
        <field name="MatrixSubtype" type="Survey.MatrixSubtype" />
    </model>

    <optionset id="Survey.SurveyType" name="Survey Type">
        <option value="survey" name="Survey" />
        <option value="assessment" name="Assessment" />
        <option value="live_session" name="Live Session" />
        <option value="custom" name="Custom" />
    </optionset>

    <optionset id="Survey.ProgressionMode" name="Progression Mode">
        <option value="number" name="Number" />
        <option value="progress_bar" name="Progress Bar" />
        <option value="none" name="None" />
    </optionset>

    <optionset id="Survey.ScoringType" name="Scoring Type">
        <option value="scoring_without_answers" name="Scoring Without Answers" />
        <option value="scoring_with_answers" name="Scoring With Answers" />
    </optionset>

    <optionset id="Survey.QuestionsLayout" name="Questions Layout">
        <option value="page_per_question" name="Page Per Question" />
        <option value="page_per_section" name="Page Per Section" />
    </optionset>

    <optionset id="Survey.QuestionsSelection" name="Questions Selection">
        <option value="all" name="All" />
        <option value="random" name="Random" />
    </optionset>

    <optionset id="Survey.AccessMode" name="Access Mode">
        <option value="public" name="Public" />
        <option value="token" name="Token" />
    </optionset>

    <optionset id="Survey.MatrixSubtype" name="Matrix Subtype">
        <option value="simple" name="Simple" />
        <option value="star" name="Star" />
        <option value="smiley" name="Smiley" />
        <option value="heat_map" name="Heat Map" />
    </optionset>
</buvi>
