xml
<buvi>
    <model id="Hr.WorkEntry" name="WorkEntry" description="HR Work Entry">
        <field name="LeaveId" type="Hr.Leave" label="Time Off" />
        <field name="LeaveState" type="Hr.LeaveState" />
        <field name="State" type="Hr.WorkEntryState" />
        <field name="WorkEntryTypeId" type="Hr.WorkEntryType" />
        <field name="DateStart" type="datetime" />
        <field name="DateStop" type="datetime" />
        <field name="EmployeeId" type="Hr.Employee" />
        <field name="Active" type="bool" />
    </model>

    <model id="Hr.WorkEntryType" name="WorkEntryType" description="HR Work Entry Type">
        <field name="LeaveTypeIds" type="Hr.LeaveType" label="Time Off Type" multiple="true" 
               help="Work entry used in the payslip." />
    </model>

    <optionset id="Hr.LeaveState" name="Leave State">
        <!-- Add options based on Odoo's leave states -->
    </optionset>

    <optionset id="Hr.WorkEntryState" name="Work Entry State">
        <!-- Add options based on Odoo's work entry states -->
    </optionset>
</buvi>
