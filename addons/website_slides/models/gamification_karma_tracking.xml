xml
<buvi>
    <model id="WebsiteSlides.KarmaTracking" name="KarmaTracking" description="Karma Tracking">
        <field name="Origin" type="selection" label="Origin" required="true" selection="WebsiteSlides.KarmaTrackingOriginSelection">
            <help>Where the karma points come from.</help>
        </field>
        <field name="Points" type="integer" label="Points" required="true">
            <help>Number of points associated to the action.</help>
        </field>
        <field name="User" type="res.users" label="User" required="true" />
        <field name="Date" type="datetime" label="Date" required="true" />
        <field name="Slide" type="slide.slide" label="Slide" />
        <field name="Channel" type="slide.channel" label="Channel" />
        <field name="ResPartner" type="res.partner" label="Partner" />
        <field name="ResCompany" type="res.company" label="Company" />
        <field name="Session" type="slide.session" label="Session" />
        <field name="Course" type="slide.course" label="Course" />
    </model>
    <optionset id="WebsiteSlides.KarmaTrackingOriginSelection" name="Karma Tracking Origin Selection">
        <option value="slide.slide" name="Course Quiz" />
        <option value="slide.channel" name="Channel" />
    </optionset>
</buvi>
