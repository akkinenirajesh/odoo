<buvi>
    <model id="Website.ForumPostReason" name="ForumPostReason" description="Post Closing Reason">
        <field name="Name" type="string" label="Closing Reason" required="true" translate="true" />
        <field name="ReasonType" type="Website.ForumPostReasonType" default="basic" />
    </model>

    <optionset id="Website.ForumPostReasonType" name="Reason Type">
        <option value="basic" name="Basic" />
        <option value="offensive" name="Offensive" />
    </optionset>
</buvi>
