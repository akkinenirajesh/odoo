xml
<buvi>
    <model id="Event.Event" name="Event" description="Event">
        <field name="Name" type="string" label="Event Name" required="true" translate="true"/>
        <field name="StartDate" type="datetime" label="Start Date" required="true"/>
        <field name="EndDate" type="datetime" label="End Date" required="true"/>
        <field name="State" type="selection" label="State" selection="[('draft','Draft'), ('confirm','Confirmed'), ('done','Done'), ('cancel','Cancelled')]"/>
        <field name="Speakers" type="many2many" collection="true" relation="Res.Partner" label="Speakers"/>
        <field name="Attendees" type="many2many" collection="true" relation="Res.Partner" label="Attendees"/>
    </model>
</buvi>
