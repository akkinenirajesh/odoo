xml
<buvi>
  <model id="WebsiteSlidesSurvey.SlidePartnerRelation" name="WebsiteSlidesSurvey.SlidePartnerRelation" description="Slide Partner Relation">
    <field name="UserInputIds" type="WebsiteSlidesSurvey.SurveyUserInput" collection="true" label="Certification attempts" />
    <field name="SurveyScoringSuccess" type="bool" label="Certification Succeeded" />
  </model>

  <model id="WebsiteSlidesSurvey.Slide" name="WebsiteSlidesSurvey.Slide" description="Slide">
    <field name="Name" type="string" label="Name" required="true" />
    <field name="SlideCategory" type="selection" label="Slide Category" selection="WebsiteSlidesSurvey.SlideCategory" />
    <field name="SlideType" type="selection" label="Slide Type" selection="WebsiteSlidesSurvey.SlideType" />
    <field name="SurveyId" type="WebsiteSlidesSurvey.SurveySurvey" label="Certification" />
    <field name="NbrCertification" type="integer" label="Number of Certifications" />
    <field name="IsPreview" type="bool" label="Is Preview" />
  </model>

  <optionset id="WebsiteSlidesSurvey.SlideCategory" name="Slide Category">
    <option value="certification" name="Certification" />
  </optionset>

  <optionset id="WebsiteSlidesSurvey.SlideType" name="Slide Type">
    <option value="certification" name="Certification" />
  </optionset>
</buvi>
