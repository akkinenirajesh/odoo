xml
<buvi>
    <model id="Project.ProjectProjectStage" name="ProjectProjectStage" description="Project Stage">
        <field name="Active" type="bool" default="true" export_string_translation="false" />
        <field name="Sequence" type="integer" default="50" export_string_translation="false" />
        <field name="Name" type="string" required="true" translate="true" />
        <field name="MailTemplate" type="Mail.MailTemplate" label="Email Template" domain="[('Model', '=', 'Project.Project')]"
            help="If set, an email will be automatically sent to the customer when the project reaches this stage." />
        <field name="Fold" type="bool" label="Folded in Kanban"
            help="If enabled, this stage will be displayed as folded in the Kanban view of your projects. Projects in a folded stage are considered as closed." />
        <field name="Company" type="Res.Company" label="Company" />
    </model>
</buvi>
