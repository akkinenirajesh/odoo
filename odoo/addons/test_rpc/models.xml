xml
<buvi>
    <model id="TestRpc.ModelA" name="ModelA" description="Model A">
        <field name="Name" type="string" label="Name" required="true" />
        <field name="FieldB1" type="TestRpc.ModelB" label="required field" required="true" />
        <field name="FieldB2" type="TestRpc.ModelB" label="restricted field" ondelete="restrict" />
    </model>
    <model id="TestRpc.ModelB" name="ModelB" description="Model B">
        <field name="Name" type="string" label="Name" required="true" />
        <field name="Value" type="integer" label="Value" />
        <constraint name="QtyPositive" message="The value must be positive" check="Value &gt; 0" />
    </model>
</buvi>
