xml
<buvi>
    <model id="Calendar.Event" name="Event" description="Calendar Event">
        <field name="GoogleId" type="string" label="Google Calendar Event Id" />
        <field name="GuestsReadonly" type="bool" label="Guests Event Modification Permission" default="false" />
        <field name="VideocallSource" type="Calendar.VideocallSource" />
        <field name="Name" type="string" label="Event Name" required="true" />
        <field name="Description" type="string" label="Description" />
        <field name="Allday" type="bool" label="All Day Event" />
        <field name="Start" type="datetime" label="Start" required="true" />
        <field name="DateEnd" type="date" label="End Date" />
        <field name="Stop" type="datetime" label="Stop" />
        <field name="Attendees" type="Calendar.Attendee" label="Attendees" multiple="true" />
        <field name="Alarms" type="Calendar.Alarm" label="Alarms" multiple="true" />
        <field name="Location" type="string" label="Location" />
        <field name="Privacy" type="Calendar.EventPrivacy" label="Privacy" />
        <field name="Active" type="bool" label="Active" default="true" />
        <field name="ShowAs" type="Calendar.EventShowAs" label="Show Time as" />
        <field name="User" type="Core.User" label="User" />
        <field name="Partners" type="Core.Partner" label="Partners" multiple="true" />
        <field name="Recurrency" type="bool" label="Recurrent" />
        <field name="VideocallLocation" type="string" label="Videocall Location" />
        <field name="NeedSync" type="bool" label="Need Sync" />
        <field name="RecurrenceId" type="Calendar.Recurrence" label="Recurrence" />
        <field name="FollowRecurrence" type="bool" label="Follow Recurrence" />
    </model>

    <optionset id="Calendar.VideocallSource" name="Videocall Source">
        <option value="GoogleMeet" name="Google Meet" />
        <option value="Discuss" name="Discuss" />
    </optionset>

    <optionset id="Calendar.EventPrivacy" name="Event Privacy">
        <option value="Public" name="Public" />
        <option value="Private" name="Private" />
        <option value="Confidential" name="Confidential" />
    </optionset>

    <optionset id="Calendar.EventShowAs" name="Show Time as">
        <option value="Free" name="Free" />
        <option value="Busy" name="Busy" />
    </optionset>
</buvi>
