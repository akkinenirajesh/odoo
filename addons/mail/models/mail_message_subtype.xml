xml
<buvi>
    <model id="Mail.MailMessageSubtype" name="MailMessageSubtype" description="Message subtypes">
        <field name="Name" type="string" label="Message Type" required="true" translate="true" help="Message subtype gives a more precise type on the message, especially for system notifications. For example, it can be a notification related to a new record (New), or to a stage change in a process (Stage change). Message subtypes allow to precisely tune the notifications the user want to receive on its wall." />
        <field name="Description" type="text" label="Description" translate="true" prefetch="true" help="Description that will be added in the message posted for this subtype. If void, the name will be added instead." />
        <field name="Internal" type="bool" label="Internal Only" help="Messages with internal subtypes will be visible only by employees, aka members of base_user group" />
        <field name="Parent" type="Mail.MailMessageSubtype" relation="true" />
        <field name="RelationField" type="string" label="Relation field" help="Field used to link the related model to the subtype model when using automatic subscription on a related document. The field is used to compute getattr(related_document.relation_field)." />
        <field name="ResModel" type="string" label="Model" help="Model the subtype applies to. If False, this subtype applies to all models." />
        <field name="Default" type="bool" label="Default" default="true" help="Activated by default when subscribing." />
        <field name="Sequence" type="integer" label="Sequence" default="1" help="Used to order subtypes." />
        <field name="Hidden" type="bool" label="Hidden" help="Hide the subtype in the follower options" />
        <field name="TrackRecipients" type="bool" label="Track Recipients" help="Whether to display all the recipients or only the important ones." />
    </model>
</buvi>
