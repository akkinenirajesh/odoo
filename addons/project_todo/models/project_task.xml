xml
<buvi>
  <model id="Project.Task" name="Project.Task" description="Project Task">
    <field name="Name" type="string" label="Task Name" required="true" translate="true" />
    <field name="Description" type="text" label="Description" translate="true" />
    <field name="ProjectId" type="Project.Project" label="Project" required="true" relation="true" />
    <field name="ParentId" type="Project.Task" label="Parent Task" relation="true" />
    <field name="UserId" type="Res.Users" label="Assigned To" relation="true" collection="true" />
    <field name="StageId" type="Project.Task.Stage" label="Stage" relation="true" />
    <field name="Deadline" type="date" label="Deadline" />
    <field name="Priority" type="selection" label="Priority"
      selection="Project.Task.PrioritySelection" />
    <field name="KanbanState" type="selection" label="Kanban State"
      selection="Project.Task.KanbanStateSelection" />
    <field name="Active" type="bool" label="Active" default="true"
      help="Set active to false to hide the task without removing it." />
  </model>

  <optionset id="Project.Task.PrioritySelection" name="Task Priority Selection">
    <option value="0" name="Low" />
    <option value="1" name="Normal" />
    <option value="2" name="High" />
    <option value="3" name="Very High" />
  </optionset>

  <optionset id="Project.Task.KanbanStateSelection" name="Task Kanban State Selection">
    <option value="ready" name="Ready" />
    <option value="done" name="Done" />
    <option value="blocked" name="Blocked" />
  </optionset>

  <model id="Project.Task.Stage" name="Project.Task.Stage" description="Project Task Stage">
    <field name="Name" type="string" label="Stage Name" required="true" translate="true" />
    <field name="Sequence" type="integer" label="Sequence" />
    <field name="IsFolded" type="bool" label="Folded" default="false" />
    <field name="ProjectIds" type="Project.Project" label="Projects" relation="true" collection="true" />
    <field name="Color" type="integer" label="Color" />
    <field name="Active" type="bool" label="Active" default="true"
      help="Set active to false to hide the task stage without removing it." />
  </model>
</buvi>
