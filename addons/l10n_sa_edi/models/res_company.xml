  <optionset id="ResCompany.L10nSaApiMode" name="L10nSaApiMode">
    <option value="sandbox" name="Sandbox" />
    <option value="preprod" name="Simulation (Pre-Production)" />
    <option value="prod" name="Production" />
  </optionset>
</buvi>
