xml
<buvi>
    <model id="HrContract.ContractHistory" name="ContractHistory" description="Contract history">
        <field name="ContractId" type="HrContract.Contract" label="Contract" readonly="true" />
        <field name="Name" type="string" label="Contract Name" readonly="true" />
        <field name="DateHired" type="date" label="Hire Date" readonly="true" />
        <field name="DateStart" type="date" label="Start Date" readonly="true" />
        <field name="DateEnd" type="date" label="End Date" readonly="true" />
        <field name="EmployeeId" type="HrEmployee.Employee" label="Employee" readonly="true" />
        <field name="ActiveEmployee" type="bool" label="Active Employee" readonly="true" />
        <field name="IsUnderContract" type="bool" label="Is Currently Under Contract" readonly="true" />
        <field name="DepartmentId" type="HrDepartment.Department" label="Department" readonly="true" />
        <field name="StructureTypeId" type="HrPayroll.StructureType" label="Salary Structure Type" readonly="true" />
        <field name="HrResponsibleId" type="Core.User" label="HR Responsible" readonly="true" />
        <field name="JobId" type="HrJob.Job" label="Job Position" readonly="true" />
        <field name="State" type="HrContract.ContractState" label="Status" readonly="true" />
        <field name="ResourceCalendarId" type="Resource.Calendar" label="Working Schedule" readonly="true" />
        <field name="Wage" type="decimal" label="Wage" readonly="true" help="Employee's monthly gross wage." />
        <field name="CompanyId" type="Core.Company" label="Company" readonly="true" />
        <field name="CompanyCountryId" type="Core.Country" label="Company country" readonly="true" />
        <field name="CountryCode" type="string" label="Country Code" readonly="true" />
        <field name="CurrencyId" type="Core.Currency" label="Currency" readonly="true" />
        <field name="ContractTypeId" type="HrContract.ContractType" label="Contract Type" readonly="true" />
        <field name="ContractCount" type="integer" label="# Contracts" compute="_ComputeContractCount" />
        <field name="UnderContractState" type="HrContract.UnderContractState" label="Contractual Status" compute="_ComputeUnderContractState" />
        <field name="ActivityState" type="Core.ActivityState" label="Activity State" />
    </model>

    <optionset id="HrContract.ContractState" name="Contract State">
        <option value="Draft" name="New" />
        <option value="Open" name="Running" />
        <option value="Close" name="Expired" />
        <option value="Cancel" name="Cancelled" />
    </optionset>

    <optionset id="HrContract.UnderContractState" name="Under Contract State">
        <option value="Done" name="Under Contract" />
        <option value="Blocked" name="Not Under Contract" />
    </optionset>
</buvi>
