xml
<buvi>
    <model id="Gamification.GoalDefinition" name="GoalDefinition" description="Gamification Goal Definition">
        <field name="Name" type="string" label="Goal Definition" required="true" translate="true" />
        <field name="Description" type="string" label="Goal Description" />
        <field name="Monetary" type="bool" default="false" label="Monetary Value"
            help="The target and current value are defined in the company currency." />
        <field name="Suffix" type="string" label="Suffix" 
            help="The unit of the target and current values" translate="true" />
        <field name="FullSuffix" type="string" label="Full Suffix" computed="true"
            help="The currency and suffix field" />
        <field name="ComputationMode" type="Gamification.ComputationMode" required="true" default="Manually"
            help="Define how the goals will be computed. The result of the operation will be stored in the field 'Current'." />
        <field name="DisplayMode" type="Gamification.DisplayMode" required="true" default="Progress" />
        <field name="Model" type="Core.IrModel" label="Model" />
        <field name="ModelInheritedIds" type="Core.IrModel" multiple="true" related="Model.InheritedModelIds" />
        <field name="Field" type="Core.IrModelFields" label="Field to Sum" />
        <field name="FieldDate" type="Core.IrModelFields" label="Date Field"
            help="The date to use for the time period evaluated" />
        <field name="Domain" type="string" required="true" default="[]" label="Filter Domain"
            help="Domain for filtering records. General rule, not user depending, e.g. [('state', '=', 'done')]. The expression can contain reference to 'user' which is a browse record of the current user if not in batch mode." />
        <field name="BatchMode" type="bool" label="Batch Mode"
            help="Evaluate the expression in batch instead of once for each user" />
        <field name="BatchDistinctiveField" type="Core.IrModelFields" label="Distinctive field for batch user"
            help="In batch mode, this indicates which field distinguishes one user from the other, e.g. user_id, partner_id..." />
        <field name="BatchUserExpression" type="string" label="Evaluated expression for batch mode"
            help="The value to compare with the distinctive field. The expression can contain reference to 'user' which is a browse record of the current user, e.g. user.id, user.partner_id.id..." />
        <field name="ComputeCode" type="string" label="Python Code"
            help="Python code to be executed for each user. 'result' should contains the new current value. Evaluated user can be access through object.user_id." />
        <field name="Condition" type="Gamification.GoalCondition" required="true" default="Higher" label="Goal Performance"
            help="A goal is considered as completed when the current value is compared to the value to reach" />
        <field name="Action" type="Core.IrActionsActWindow" label="Action"
            help="The action that will be called to update the goal value." />
        <field name="ResIdField" type="string" label="ID Field of user"
            help="The field name on the user profile (res.users) containing the value for res_id for action." />
    </model>

    <optionset id="Gamification.ComputationMode" name="Computation Mode">
        <option value="Manually" name="Recorded manually" />
        <option value="Count" name="Automatic: number of records" />
        <option value="Sum" name="Automatic: sum on a field" />
        <option value="Python" name="Automatic: execute a specific Python code" />
    </optionset>

    <optionset id="Gamification.DisplayMode" name="Display Mode">
        <option value="Progress" name="Progressive (using numerical values)" />
        <option value="Boolean" name="Exclusive (done or not-done)" />
    </optionset>

    <optionset id="Gamification.GoalCondition" name="Goal Condition">
        <option value="Higher" name="The higher the better" />
        <option value="Lower" name="The lower the better" />
    </optionset>
</buvi>
