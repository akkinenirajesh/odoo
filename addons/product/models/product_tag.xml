xml
<buvi>
    <model id="Product.ProductTag" name="ProductTag" description="Product Tag">
        <field name="Name" type="string" label="Name" required="true" translate="true" />
        <field name="Sequence" type="integer" default="10" />
        <field name="Color" type="string" label="Color" default="#3C3C3C" />
        <field name="ProductTemplates" type="Product.ProductTemplate" collection="true" />
        <field name="ProductVariants" type="Product.Product" collection="true" domain="[('AttributeLineIds', '!=', False), ('ProductTemplateId', 'not in', ProductTemplates)]" />
        <field name="ProductIds" type="Product.Product" collection="true" compute="ComputeProductIds" search="SearchProductIds" />
        <unique>
            <field name="Name" />
            <message>Tag name already exists!</message>
        </unique>
    </model>
</buvi>
