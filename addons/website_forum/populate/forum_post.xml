xml
<buvi>
  <model id="WebsiteForum.Post" name="WebsiteForum.Post" description="Forum Post">
    <field name="ForumId" type="WebsiteForum.Forum" required="true" relation="many2one" />
    <field name="Name" type="string" label="Post Title" required="true" translate="true" />
    <field name="Content" type="text" label="Post Content" translate="true" />
    <field name="LastActivityDate" type="datetime" label="Last Activity Date" required="true" />
    <field name="ChildIds" type="WebsiteForum.Post" relation="one2many" collection="true" />
    <field name="TagIds" type="WebsiteForum.Tag" relation="many2many" collection="true" />
  </model>
</buvi>
