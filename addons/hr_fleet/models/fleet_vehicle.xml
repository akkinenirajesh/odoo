xml
<buvi>
    <model id="Fleet.FleetVehicle" name="FleetVehicle" description="Fleet Vehicle">
        <field name="MobilityCard" type="string" compute="ComputeMobilityCard" store="true" />
        <field name="DriverEmployeeId" type="HR.Employee" label="Driver (Employee)"
            compute="ComputeDriverEmployeeId" store="true"
            domain="['|', ('Company', '=', null), ('Company', '=', Company)]"
            tracking="true" />
        <field name="DriverEmployeeName" type="string" related="DriverEmployeeId.Name" />
        <field name="FutureDriverEmployeeId" type="HR.Employee" label="Future Driver (Employee)"
            compute="ComputeFutureDriverEmployeeId" store="true"
            domain="['|', ('Company', '=', null), ('Company', '=', Company)]"
            tracking="true" />
    </model>
</buvi>
