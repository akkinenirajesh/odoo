xml
<buvi>
    <model id="Product.PricelistItem" name="PricelistItem" description="Pricelist Rule">
        <field name="Pricelist" type="Product.Pricelist" required="true" default="_DefaultPricelistId" />
        <field name="Company" type="Core.Company" related="Pricelist.Company" store="true" />
        <field name="Currency" type="Core.Currency" related="Pricelist.Currency" store="true" />
        <field name="DateStart" type="datetime" label="Start Date"
            help="Starting datetime for the pricelist item validation. The displayed value depends on the timezone set in your preferences." />
        <field name="DateEnd" type="datetime" label="End Date"
            help="Ending datetime for the pricelist item validation. The displayed value depends on the timezone set in your preferences." />
        <field name="MinQuantity" type="float" label="Min. Quantity" default="0"
            help="For the rule to apply, bought/sold quantity must be greater than or equal to the minimum quantity specified in this field. Expressed in the default unit of measure of the product." />
        <field name="AppliedOn" type="Product.PricelistItemAppliedOn" default="Global" required="true"
            help="Pricelist Item applicable on selected option" />
        <field name="Category" type="Product.Category" label="Product Category"
            help="Specify a product category if this rule only applies to products belonging to this category or its children categories. Keep empty otherwise." />
        <field name="ProductTemplate" type="Product.Template" label="Product"
            help="Specify a template if this rule only applies to one product template. Keep empty otherwise." />
        <field name="Product" type="Product.Product" label="Product Variant"
            help="Specify a product if this rule only applies to one product. Keep empty otherwise." />
        <field name="Base" type="Product.PricelistItemBase" default="ListPrice" required="true"
            help="Base price for computation." />
        <field name="BasePricelist" type="Product.Pricelist" label="Other Pricelist" />
        <field name="ComputePrice" type="Product.PricelistItemComputePrice" default="Fixed" required="true" />
        <field name="FixedPrice" type="float" label="Fixed Price" />
        <field name="PercentPrice" type="float" label="Percentage Price"
            help="You can apply a mark-up by setting a negative discount." />
        <field name="PriceDiscount" type="float" label="Price Discount" default="0"
            help="You can apply a mark-up by setting a negative discount." />
        <field name="PriceRound" type="float" label="Price Rounding"
            help="Sets the price so that it is a multiple of this value. Rounding is applied after the discount and before the surcharge. To have prices that end in 9.99, set rounding 10, surcharge -0.01" />
        <field name="PriceSurcharge" type="float" label="Price Surcharge"
            help="Specify the fixed amount to add or subtract (if negative) to the amount calculated with the discount." />
        <field name="PriceMinMargin" type="float" label="Min. Price Margin"
            help="Specify the minimum amount of margin over the base price." />
        <field name="PriceMaxMargin" type="float" label="Max. Price Margin"
            help="Specify the maximum amount of margin over the base price." />
        <field name="Name" type="string" label="Name" computed="ComputeNameAndPrice"
            help="Explicit rule name for this pricelist line." />
        <field name="Price" type="string" label="Price" computed="ComputeNameAndPrice"
            help="Explicit rule name for this pricelist line." />
        <field name="RuleTip" type="string" computed="ComputeRuleTip" />
    </model>

    <optionset id="Product.PricelistItemAppliedOn" name="Pricelist Item Applied On">
        <option value="Global" name="All Products" />
        <option value="ProductCategory" name="Product Category" />
        <option value="Product" name="Product" />
        <option value="ProductVariant" name="Product Variant" />
    </optionset>

    <optionset id="Product.PricelistItemBase" name="Pricelist Item Base">
        <option value="ListPrice" name="Sales Price" />
        <option value="StandardPrice" name="Cost" />
        <option value="Pricelist" name="Other Pricelist" />
    </optionset>

    <optionset id="Product.PricelistItemComputePrice" name="Pricelist Item Compute Price">
        <option value="Fixed" name="Fixed Price" />
        <option value="Percentage" name="Discount" />
        <option value="Formula" name="Formula" />
    </optionset>
</buvi>
