    <field name="L10nSaApiMode" type="ResCompany.L10nSaApiMode" help="Specifies which API the system should use" required="true" default="sandbox" copy="false" />
    <field name="L10nSaEdiBuildingNumber" type="string" compute="ComputeAddress" inverse="L10nSaEdiInverseBuildingNumber" />
    <field name="L10nSaEdiPlotIdentification" type="string" compute="ComputeAddress" inverse="L10nSaEdiInversePlotIdentification" />
    <field name="L10nSaAdditionalIdentificationScheme" type="Core.Country" related="PartnerId.L10nSaAdditionalIdentificationScheme" readonly="false" />
    <field name="L10nSaAdditionalIdentificationNumber" type="string" related="PartnerId.L10nSaAdditionalIdentificationNumber" readonly="false" />
