<buvi>
  <model id="Snailmail.MailNotification" name="MailNotification" description="Mail Notification">
    <field name="NotificationType" type="selection" label="Notification Type" selection="MailNotification.NotificationTypeSelection" />
    <field name="LetterId" type="Snailmail.Letter" label="Snailmail Letter" relation="true" ondelete="cascade" index="btree_not_null" />
    <field name="FailureType" type="selection" label="Failure Type" selection="MailNotification.FailureTypeSelection" />
  </model>

  <optionset id="MailNotification.NotificationTypeSelection" name="Notification Type Selection">
    <option value="snail" name="Snailmail" />
  </optionset>

  <optionset id="MailNotification.FailureTypeSelection" name="Failure Type Selection">
    <option value="sn_credit" name="Snailmail Credit Error" />
    <option value="sn_trial" name="Snailmail Trial Error" />
    <option value="sn_price" name="Snailmail No Price Available" />
    <option value="sn_fields" name="Snailmail Missing Required Fields" />
    <option value="sn_format" name="Snailmail Format Error" />
    <option value="sn_error" name="Snailmail Unknown Error" />
  </optionset>
</buvi>
