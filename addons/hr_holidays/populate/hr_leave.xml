xml
<buvi>
    <model id="HR.LeaveType" name="LeaveType" description="Leave Type">
        <field name="Name" type="string" label="Leave Type Name" required="true" />
        <field name="Company" type="Core.Company" label="Company" />
        <field name="RequiresAllocation" type="HR.LeaveTypeAllocation" label="Requires Allocation" />
        <field name="EmployeeRequests" type="HR.LeaveTypeRequest" label="Employee Requests" />
        <field name="RequestUnit" type="HR.LeaveRequestUnit" label="Request Unit" />
    </model>

    <model id="HR.Leave" name="Leave" description="Leave Request">
        <field name="HolidayStatus" type="HR.LeaveType" label="Leave Type" required="true" />
        <field name="Employee" type="HR.Employee" label="Employee" required="true" />
        <field name="RequestDateFrom" type="datetime" label="Start Date" required="true" />
        <field name="RequestDateTo" type="datetime" label="End Date" required="true" />
        <field name="State" type="HR.LeaveState" label="State" required="true" />
    </model>

    <optionset id="HR.LeaveTypeAllocation" name="Leave Type Allocation">
        <option value="Yes" name="Yes" />
        <option value="No" name="No" />
    </optionset>

    <optionset id="HR.LeaveTypeRequest" name="Leave Type Request">
        <option value="Yes" name="Yes" />
        <option value="No" name="No" />
    </optionset>

    <optionset id="HR.LeaveRequestUnit" name="Leave Request Unit">
        <option value="Hour" name="Hour" />
        <option value="Day" name="Day" />
    </optionset>

    <optionset id="HR.LeaveState" name="Leave State">
        <option value="Draft" name="Draft" />
        <option value="Confirm" name="Confirm" />
    </optionset>
</buvi>
