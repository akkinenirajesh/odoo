xml
<buvi>
    <model id="Website.Page" name="Page" description="Page">
        <field name="Url" type="string" label="Page URL" required="true" />
        <field name="ViewId" type="IrUiView.View" label="View" required="true" ondelete="cascade" />
        <field name="WebsiteIndexed" type="bool" label="Is Indexed" default="true" />
        <field name="DatePublish" type="datetime" label="Publishing Date" />
        <field name="MenuIds" type="WebsiteMenu.Menu" collection="true" label="Related Menus" />
        <field name="IsInMenu" type="bool" compute="ComputeWebsiteMenu" inverse="InverseWebsiteMenu" />
        <field name="IsHomepage" type="bool" compute="ComputeIsHomepage" inverse="SetIsHomepage" label="Homepage" />
        <field name="IsVisible" type="bool" compute="ComputeVisible" label="Is Visible" />
        <field name="IsNewPageTemplate" type="bool" label="New Page Template" 
            help="Add this page to the &quot;+New&quot; page templates. It will be added to the &quot;Custom&quot; category." />
        <field name="HeaderOverlay" type="bool" />
        <field name="HeaderColor" type="string" />
        <field name="HeaderTextColor" type="string" />
        <field name="HeaderVisible" type="bool" default="true" />
        <field name="FooterVisible" type="bool" default="true" />
        <field name="WebsiteId" type="Website.Website" related="ViewId.WebsiteId" store="true" readonly="false" ondelete="cascade" />
        <field name="Arch" type="text" related="ViewId.Arch" readonly="false" depends_context="WebsiteId" />
    </model>
</buvi>
