xml
<buvi>
    <model id="PointOfSale.PosCategory" name="PosCategory" description="Point of Sale Category">
        <field name="Name" type="string" label="Category Name" required="true" translate="true" />
        <field name="ParentId" type="PointOfSale.PosCategory" label="Parent Category" />
        <field name="ChildIds" type="PointOfSale.PosCategory[]" label="Children Categories" />
        <field name="Sequence" type="integer" 
               help="Gives the sequence order when displaying a list of product categories." />
        <field name="Image128" type="byte[]" label="Image" />
        <field name="Color" type="integer" label="Color" />
        <field name="HasImage" type="bool" computed="true" />
        <unique>
            <field name="Name" />
            <field name="ParentId" />
            <message>Error! You cannot create recursive categories.</message>
        </unique>
    </model>
</buvi>
