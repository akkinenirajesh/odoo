xml
<buvi>
    <model id="Event.EventRegistration" name="Event.EventRegistration" description="Event Registration">
        <field name="State" type="selection" label="Status"
            selection="['draft', 'open', 'done', 'cancel']"
            help="* **Draft**: The registration is not yet confirmed.
            * **Open**: The registration is confirmed.
            * **Done**: The registration is completed.
            * **Cancel**: The registration is canceled."/>
        <field name="Name" type="string" label="Registration Name"
            help="The name of the registration."/>
        <field name="Email" type="string" label="Email"
            help="The email of the registrant."/>
        <field name="Phone" type="string" label="Phone"
            help="The phone number of the registrant."/>
        <field name="Event" type="Event.Event" label="Event"
            help="The event to which the registration belongs."/>
        <field name="Event.EventId" type="integer" label="Event ID"
            help="The ID of the event to which the registration belongs."/>
        <field name="EventId" type="integer" label="Registration ID"
            help="The ID of the registration."/>
        <field name="IsRegistered" type="bool" label="Is Registered"
            help="Whether the registration is confirmed."/>
        <field name="RegistrationDate" type="datetime" label="Registration Date"
            help="The date and time when the registration was created."/>
        <field name="ConfirmedDate" type="datetime" label="Confirmed Date"
            help="The date and time when the registration was confirmed."/>
        <field name="Attendee" type="Core.Partner" label="Attendee"
            help="The person who registered for the event."/>
        <field name="Attendee.PartnerId" type="integer" label="Attendee ID"
            help="The ID of the person who registered for the event."/>
        <field name="PartnerId" type="integer" label="Partner ID"
            help="The ID of the partner associated with the registration."/>
        <field name="Notes" type="text" label="Notes"
            help="Any additional notes about the registration."/>
    </model>
</buvi>
