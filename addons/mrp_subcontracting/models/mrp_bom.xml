xml
<buvi>
    <model id="Mrp.MrpBom" name="MrpBom" description="Bill of Material">
        <field name="Type" type="selection" label="Type" required="true">
            <option value="normal" name="Normal" />
            <option value="phantom" name="Phantom" />
            <option value="subcontract" name="Subcontracting" />
        </field>
        <field name="Subcontractors" type="many2many" relation="Res.Partner" collection="true" label="Subcontractors" checkCompany="true" />
        <field name="Active" type="bool" default="true" />
        <field name="Sequence" type="integer" label="Sequence" />
        <field name="Product" type="many2one" relation="Product.Product" required="true" />
        <field name="ProductQty" type="float" label="Quantity" required="true" />
        <field name="ProductUoM" type="many2one" relation="Product.UoM" required="true" />
        <field name="OperationIds" type="one2many" relation="Mrp.MrpBomOperation" collection="true" />
        <field name="ByproductIds" type="one2many" relation="Mrp.MrpBomByproduct" collection="true" />
        <field name="Company" type="many2one" relation="Res.Company" />
    </model>
</buvi>
