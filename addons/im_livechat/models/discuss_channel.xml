xml
<buvi>
    <model id="ImLivechat.DiscussChannel" name="DiscussChannel" description="Chat Session">
        <field name="AnonymousName" type="string" label="Anonymous Name" />
        <field name="ChannelType" type="ImLivechat.ChannelType" />
        <field name="Duration" type="float" label="Duration" 
               help="Duration of the session in hours" />
        <field name="LivechatActive" type="bool" label="Is livechat ongoing?"
               help="Livechat session is active until visitor leaves the conversation." />
        <field name="LivechatChannel" type="ImLivechat.Channel" label="Channel" />
        <field name="LivechatOperator" type="Core.Partner" label="Operator" />
        <field name="ChatbotCurrentStep" type="Chatbot.ScriptStep" label="Chatbot Current Step" />
        <field name="ChatbotMessages" type="Chatbot.Message[]" label="Chatbot Messages" />
        <field name="Country" type="Core.Country" label="Country"
               help="Country of the visitor of the channel" />
        <unique>
            <field name="LivechatOperator" />
            <field name="ChannelType" />
            <message>Livechat Operator ID is required for a channel of type livechat.</message>
        </unique>
    </model>

    <optionset id="ImLivechat.ChannelType" name="Channel Type">
        <option value="Livechat" name="Livechat Conversation" />
        <!-- Add other channel types here -->
    </optionset>
</buvi>
