xml
<buvi>
    <model id="MassMailingSms.MailingTrace" name="MassMailingSms.MailingTrace" description="Improve statistics model to add SMS support. Main attributes of statistics model are used, only some specific data is required.">
        <field name="TraceType" type="selection" label="Trace Type" required="true" selection="MassMailingSms.MailingTraceType" />
        <field name="SmsId" type="MassMailingSms.SmsSms" label="SMS" store="false" compute="ComputeSmsId" />
        <field name="SmsIdInt" type="integer" label="SMS ID" index="btree_not_null" />
        <field name="SmsTrackerIds" type="MassMailingSms.SmsTracker" collection="true" label="SMS Trackers" />
        <field name="SmsNumber" type="char" label="Number" />
        <field name="SmsCode" type="char" label="Code" />
        <field name="FailureType" type="selection" label="Failure Type" selection="MassMailingSms.MailingTraceFailureType" />
    </model>

    <optionset id="MassMailingSms.MailingTraceType" name="Mailing Trace Type">
        <option value="email" name="Email" />
        <option value="sms" name="SMS" />
    </optionset>

    <optionset id="MassMailingSms.MailingTraceFailureType" name="Mailing Trace Failure Type">
        <option value="bounce" name="Bounce" />
        <option value="spam" name="Spam" />
        <option value="open" name="Open" />
        <option value="click" name="Click" />
        <option value="unsubscribe" name="Unsubscribe" />
        <option value="sms_number_missing" name="Missing Number" />
        <option value="sms_number_format" name="Wrong Number Format" />
        <option value="sms_credit" name="Insufficient Credit" />
        <option value="sms_country_not_supported" name="Country Not Supported" />
        <option value="sms_registration_needed" name="Country-specific Registration Required" />
        <option value="sms_server" name="Server Error" />
        <option value="sms_acc" name="Unregistered Account" />
        <option value="sms_blacklist" name="Blacklisted" />
        <option value="sms_duplicate" name="Duplicate" />
        <option value="sms_optout" name="Opted Out" />
        <option value="sms_expired" name="Expired" />
        <option value="sms_invalid_destination" name="Invalid Destination" />
        <option value="sms_not_allowed" name="Not Allowed" />
        <option value="sms_not_delivered" name="Not Delivered" />
        <option value="sms_rejected" name="Rejected" />
    </optionset>
</buvi>
