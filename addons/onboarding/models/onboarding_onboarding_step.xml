xml
<buvi>
    <model id="Onboarding.OnboardingStep" name="OnboardingStep" description="Onboarding Step">
        <field name="OnboardingIds" type="Onboarding.Onboarding" collection="true" />
        <field name="Title" type="string" label="Title" translate="true" />
        <field name="Description" type="string" label="Description" translate="true" />
        <field name="ButtonText" type="string" label="Button text" required="true" default="Let's do it" translate="true" help="Text on the panel's button to start this step" />
        <field name="DoneIcon" type="string" label="Font Awesome Icon when completed" default="fa-star" />
        <field name="DoneText" type="string" label="Text to show when step is completed" default="Step Completed!" translate="true" />
        <field name="StepImage" type="binary" />
        <field name="StepImageFilename" type="string" />
        <field name="StepImageAlt" type="string" label="Alt Text for the Step Image" default="Onboarding Step Image" translate="true" help="Show when impossible to load the image" />
        <field name="PanelStepOpenActionName" type="string" label="Opening action" help="Name of the onboarding step model action to execute when opening the step, e.g. action_open_onboarding_1_step_1" />
        <field name="CurrentProgressStepId" type="Onboarding.ProgressStep" compute="ComputeCurrentProgress" help="Onboarding Progress Step for the current context (company)." />
        <field name="CurrentStepState" type="selection" selection="Onboarding.OnboardingProgressStates" label="Completion State" compute="ComputeCurrentProgress" />
        <field name="ProgressIds" type="Onboarding.ProgressStep" collection="true" readonly="true" help="All related Onboarding Progress Step Records (across companies)" />
        <field name="IsPerCompany" type="bool" default="true" />
        <field name="Sequence" type="integer" default="10" />
    </model>

    <optionset id="Onboarding.OnboardingProgressStates" name="Onboarding Progress States">
        <option value="not_done" name="Not Done" />
        <option value="just_done" name="Just Done" />
        <option value="done" name="Done" />
    </optionset>
</buvi>
