xml
<buvi>
    <model id="WebsiteSale.WebsiteSaleExtraField" name="WebsiteSaleExtraField" description="E-Commerce Extra Info Shown on product page">
        <field name="Website" type="Website.Website" />
        <field name="Sequence" type="integer" default="10" />
        <field name="Field" type="IrModel.Field" required="true" ondelete="cascade" collection="true" domain="[('Model.Model', '=', 'Product.Template'), ('Type', 'in', ['char', 'binary'])]" />
        <field name="Label" type="string" related="Field.FieldDescription" />
        <field name="Name" type="string" related="Field.Name" />
    </model>
</buvi>
