xml
<buvi>
    <model id="ProjectManagement.Task" name="Task" description="Project Task">
        <field name="ProjectId" type="ProjectManagement.Project" label="Project" domain="['|', ('CompanyId', '=', false), ('CompanyId', '=?', CompanyId), ('IsInternalProject', '=', false)]" />
        <field name="AnalyticAccountActive" type="bool" label="Active Analytic Account" compute="ComputeAnalyticAccountActive" computeSudo="true" recursive="true" />
        <field name="AllowTimesheets" type="bool" label="Allow timesheets" compute="ComputeAllowTimesheets" computeSudo="true" readonly="true" />
        <field name="RemainingHours" type="float" label="Time Remaining" compute="ComputeRemainingHours" store="true" readonly="true" help="Number of allocated hours minus the number of hours spent." />
        <field name="RemainingHoursPercentage" type="float" compute="ComputeRemainingHoursPercentage" />
        <field name="EffectiveHours" type="float" label="Time Spent" compute="ComputeEffectiveHours" computeSudo="true" store="true" />
        <field name="TotalHoursSpent" type="float" label="Total Time Spent" compute="ComputeTotalHoursSpent" store="true" help="Time spent on this task and its sub-tasks (and their own sub-tasks)." />
        <field name="Progress" type="float" label="Progress" compute="ComputeProgressHours" store="true" />
        <field name="Overtime" type="float" compute="ComputeProgressHours" store="true" />
        <field name="SubtaskEffectiveHours" type="float" label="Time Spent on Sub-tasks" compute="ComputeSubtaskEffectiveHours" recursive="true" store="true" help="Time spent on the sub-tasks (and their own sub-tasks) of this task." />
        <field name="TimesheetIds" type="Core.AccountAnalyticLine" label="Timesheets" relation="many2many" />
        <field name="EncodeUomInDays" type="bool" compute="ComputeEncodeUomInDays" default="UomInDays" />
        <field name="DisplayName" type="string" help="Use these keywords in the title to set new tasks:
30h Allocate 30 hours to the task
#tags Set tags on the task
@user Assign the task to a user
! Set the task a high priority
Make sure to use the right format and order e.g. Improve the configuration screen 5h #feature #v16 @Mitchell !" />
        <field name="AllocatedHours" type="float" label="Allocated Hours" />
    </model>
</buvi>
