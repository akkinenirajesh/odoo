xml
<buvi>
  <model id="Base.Country" name="Base.Country" description="Country">
    <field name="Name" type="string" label="Country Name" required="true" translate="true" />
    <field name="Code" type="string" label="Country Code" size="2" required="true" help="The ISO country code in two chars.&#x20;
You can use this field for quick search." />
    <field name="AddressFormat" type="text" label="Layout in Reports" help="Display format to use for addresses belonging to this country.&#x20;
&#x20;
You can use python-style string pattern with all the fields of the address &#x20;
(for example, use '%(street)s' to display the field 'street') plus&#x20;
&#x20;
%(state_name)s: the name of the state&#x20;
%(state_code)s: the code of the state&#x20;
%(country_name)s: the name of the country&#x20;
%(country_code)s: the code of the country" default="%(street)s&#x20;
%(street2)s&#x20;
%(city)s %(state_code)s %(zip)s&#x20;
%(country_name)s" />
    <field name="AddressViewId" type="ir.ui.view" label="Input View" collection="true" domain="[('model', '=', 'res.partner'), ('type', '=', 'form')]" help="Use this field if you want to replace the usual way to encode a complete address.&#x20;
Note that the address_format field is used to modify the way to display addresses &#x20;
(in reports for example), while this field is used to modify the input form for &#x20;
addresses." />
    <field name="CurrencyId" type="Res.Currency" label="Currency" />
    <field name="ImageUrl" type="string" label="Flag" help="Url of static flag image" />
    <field name="PhoneCode" type="integer" label="Country Calling Code" />
    <field name="CountryGroupIds" type="Base.CountryGroup" label="Country Groups" collection="true" />
    <field name="StateIds" type="Base.CountryState" label="States" collection="true" />
    <field name="NamePosition" type="selection" label="Customer Name Position" options="[('before', 'Before Address'), ('after', 'After Address')]" default="before" help="Determines where the customer/company name should be placed, i.e. after or before the address." />
    <field name="VatLabel" type="string" label="Vat Label" translate="true" help="Use this field if you want to change vat label." />
    <field name="StateRequired" type="bool" default="false" />
    <field name="ZipRequired" type="bool" default="true" />
    <unique>
      <field name="Name" />
      <message>The name of the country must be unique!</message>
    </unique>
    <unique>
      <field name="Code" />
      <message>The code of the country must be unique!</message>
    </unique>
  </model>
  <model id="Base.CountryGroup" name="Base.CountryGroup" description="Country Group">
    <field name="Name" type="string" required="true" translate="true" />
    <field name="CountryIds" type="Base.Country" label="Countries" collection="true" />
  </model>
  <model id="Base.CountryState" name="Base.CountryState" description="Country state">
    <field name="CountryId" type="Base.Country" label="Country" required="true" />
    <field name="Name" type="string" label="State Name" required="true" help="Administrative divisions of a country. E.g. Fed. State, Departement, Canton" />
    <field name="Code" type="string" label="State Code" help="The state code." required="true" />
    <unique>
      <field name="CountryId" />
      <field name="Code" />
      <message>The code of the state must be unique by country!</message>
    </unique>
  </model>
</buvi>
