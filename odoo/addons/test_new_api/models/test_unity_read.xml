xml
<buvi>
  <model id="TestNewApi.Course" name="Course" description="a course">
    <field name="Name" type="string" label="Name" />
    <field name="LessonIds" type="TestNewApi.Lesson" collection="true" />
    <field name="AuthorId" type="TestNewApi.Person" />
    <field name="PrivateField" type="string" groups="base.group_no_one" />
    <field name="Reference" type="reference" string="reference to lesson" selection="_SelectionReferenceModel" />
    <field name="M2oReferenceId" type="TestNewApi.Lesson" string="reference to lesson too" modelField="M2oReferenceModel" />
    <field name="M2oReferenceModel" type="string" string="reference to the model for m2o_reference" />
  </model>
  <model id="TestNewApi.Lesson" name="Lesson" description="a lesson of a course (a day typically)">
    <field name="Name" type="string" label="Name" />
    <field name="CourseId" type="TestNewApi.Course" />
    <field name="AttendeeIds" type="TestNewApi.Person" collection="true" />
    <field name="TeacherId" type="TestNewApi.Person" />
    <field name="TeacherBirthdate" type="date" related="TeacherId.Birthday" />
    <field name="Date" type="date" />
  </model>
  <model id="TestNewApi.Person" name="Person" description="a person, can be an author, teacher or attendee of a lesson">
    <field name="Name" type="string" label="Name" />
    <field name="LessonIds" type="TestNewApi.Lesson" collection="true" />
    <field name="EmployerId" type="TestNewApi.Employer" />
    <field name="Birthday" type="date" />
  </model>
  <model id="TestNewApi.Employer" name="Employer" description="the employer of a person">
    <field name="Name" type="string" label="Name" />
    <field name="EmployeeIds" type="TestNewApi.Person" collection="true" />
  </model>
  <model id="TestNewApi.PersonAccount" name="PersonAccount" description="an account with credentials for a given person" inherit="TestNewApi.Person" inheritField="PersonId">
    <field name="PersonId" type="TestNewApi.Person" required="true" ondelete="cascade" />
    <field name="Login" type="string" />
    <field name="ActivationDate" type="date" />
  </model>
  <optionset id="TestNewApi.SelectionReferenceModel" name="Selection Reference Model">
    <option value="TestNewApi.Lesson" name="Lesson" />
  </optionset>
</buvi>
