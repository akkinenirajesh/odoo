xml
<buvi>
    <model id="L10nIt.ResCompany" name="ResCompany" description="Italian Company Settings">
        <field name="L10nItCodiceFiscale" type="string" size="16" label="Codice Fiscale" 
               help="Fiscal code of your company" />
        <field name="L10nItTaxSystem" type="L10nIt.TaxSystem" label="Tax System"
               help="Please select the Tax System to which you are subjected." />
        <field name="L10nItEdiProxyUserId" type="AccountEdiProxyClient.User" 
               label="EDI Proxy User" computed="true" />
        <field name="L10nItHasEcoIndex" type="bool" default="false" 
               help="The seller/provider is a company listed on the register of companies and as such must also indicate the registration data on all documents (art. 2250, Italian Civil Code)" />
        <field name="L10nItEcoIndexOffice" type="Core.CountryState" 
               label="Province of the register-of-companies office" />
        <field name="L10nItEcoIndexNumber" type="string" size="20" 
               label="Number in register of companies" 
               help="This field must contain the number under which the seller/provider is listed on the register of companies." />
        <field name="L10nItEcoIndexShareCapital" type="decimal" default="0.0" 
               label="Share capital actually paid up" 
               help="Mandatory if the seller/provider is a company with share capital (SpA, SApA, Srl), this field must contain the amount of share capital actually paid up as resulting from the last financial statement" />
        <field name="L10nItEcoIndexSoleShareholder" type="L10nIt.ShareholderType" 
               label="Shareholder" />
        <field name="L10nItEcoIndexLiquidationState" type="L10nIt.LiquidationState" 
               label="Liquidation state" />
        <field name="L10nItHasTaxRepresentative" type="bool" default="false" 
               help="The seller/provider is a non-resident subject which carries out transactions in Italy with relevance for VAT purposes and which takes avail of a tax representative in Italy" />
        <field name="L10nItTaxRepresentativePartnerId" type="Core.Partner" 
               label="Tax representative partner" />
    </model>

    <optionset id="L10nIt.TaxSystem" name="Tax System">
        <option value="RF01" name="[RF01] Ordinario" />
        <option value="RF02" name="[RF02] Contribuenti minimi (art.1, c.96-117, L. 244/07)" />
        <option value="RF04" name="[RF04] Agricoltura e attività connesse e pesca (artt.34 e 34-bis, DPR 633/72)" />
        <!-- Add all other options here -->
    </optionset>

    <optionset id="L10nIt.ShareholderType" name="Shareholder Type">
        <option value="NO" name="Not a limited liability company" />
        <option value="SU" name="Socio unico" />
        <option value="SM" name="Più soci" />
    </optionset>

    <optionset id="L10nIt.LiquidationState" name="Liquidation State">
        <option value="LS" name="The company is in a state of liquidation" />
        <option value="LN" name="The company is not in a state of liquidation" />
    </optionset>
</buvi>
