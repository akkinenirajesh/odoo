xml
<buvi>
  <model id="Mail.MailNotification" name="MailNotification" description="Mail Notification">
    <field name="AuthorId" type="res.partner" relation="many2one"  label="Author" />
    <field name="MailMessageId" type="mail.message" relation="many2one" label="Message" required="true" />
    <field name="ResPartnerId" type="res.partner" relation="many2one" label="Recipient" required="true" />
    <field name="NotificationType" type="string" label="Notification Type" />
    <field name="NotificationStatus" type="string" label="Notification Status" />
    <field name="FailureType" type="string" label="Failure Type" />
    <field name="FailureReason" type="text" label="Failure Reason" />
    <field name="FailureDescription" type="text" label="Failure Description" />
    <field name="SentDate" type="datetime" label="Sent Date" />
    <field name="RetryCount" type="integer" label="Retry Count" />
    <field name="LastRetryDate" type="datetime" label="Last Retry Date" />
    <field name="NotificationTemplateId" type="mail.template" relation="many2one" label="Notification Template" />
    <field name="ResPartnerIds" type="res.partner" relation="many2many" collection="true" label="Recipients" />
    <field name="ResPartnerIdsForEmail" type="res.partner" relation="many2many" collection="true" label="Recipients For Email" />
    <field name="NotificationTemplate" type="mail.template" relation="many2one" label="Notification Template" />
    <field name="MailMessage" type="mail.message" relation="many2one" label="Message" />
    <field name="Notification" type="mail.notification" relation="many2one" label="Notification" />
    <field name="NotificationPartner" type="res.partner" relation="many2one" label="Partner" />
    <field name="Subject" type="string" label="Subject" />
  </model>
</buvi>
