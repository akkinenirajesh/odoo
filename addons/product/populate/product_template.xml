xml
<buvi>
    <model id="Product.ProductAttribute" name="Product.ProductAttribute" description="Product Attribute">
        <field name="Name" type="string" label="Attribute Name" required="true" translate="true" />
        <field name="Sequence" type="integer" label="Sequence" />
        <field name="CreateVariant" type="Product.CreateVariant" />
    </model>

    <model id="Product.ProductAttributeValue" name="Product.ProductAttributeValue" description="Product Attribute Value">
        <field name="Name" type="string" label="Attribute Value Name" required="true" translate="true" />
        <field name="Sequence" type="integer" label="Sequence" />
        <field name="AttributeId" type="Product.ProductAttribute" required="true" />
    </model>

    <model id="Product.ProductTemplate" name="Product.ProductTemplate" description="Product Template">
        <field name="Name" type="string" label="Product Name" required="true" translate="true" />
        <field name="Description" type="text" label="Description" />
        <field name="DefaultCode" type="string" label="Default Code" />
        <field name="AttributeLineIds" type="Product.ProductTemplateAttributeLine" collection="true" />
    </model>

    <model id="Product.ProductTemplateAttributeLine" name="Product.ProductTemplateAttributeLine" description="Product Template Attribute Line">
        <field name="AttributeId" type="Product.ProductAttribute" required="true" />
        <field name="ValueIds" type="Product.ProductAttributeValue" collection="true" />
    </model>

    <model id="Product.ProductTemplateAttributeExclusion" name="Product.ProductTemplateAttributeExclusion" description="Product Template Attribute Exclusion">
        <field name="ProductTemplateId" type="Product.ProductTemplate" required="true" />
        <field name="ProductTemplateAttributeValueId" type="Product.ProductTemplateAttributeValue" required="true" />
        <field name="ValueIds" type="Product.ProductAttributeValue" collection="true" />
    </model>

    <model id="Product.ProductTemplateAttributeValue" name="Product.ProductTemplateAttributeValue" description="Product Template Attribute Value">
        <field name="ProductTemplateId" type="Product.ProductTemplate" required="true" />
        <field name="AttributeLineId" type="Product.ProductTemplateAttributeLine" required="true" />
        <field name="ValueId" type="Product.ProductAttributeValue" required="true" />
        <field name="PriceExtra" type="float" />
    </model>

    <optionset id="Product.CreateVariant" name="Create Variant">
        <option value="Always" name="Always" />
        <option value="Dynamic" name="Dynamic" />
        <option value="NoVariant" name="NoVariant" />
    </optionset>
</buvi>
