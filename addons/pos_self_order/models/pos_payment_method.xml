xml
<buvi>
    <model id="Pos.PosPaymentMethod" name="PosPaymentMethod" description="POS Payment Method">
        <field name="UsePaymentTerminal" type="Selection" label="Payment Terminal" selection="Pos.PosPaymentMethodUseTerminal"  />
        <field name="Active" type="bool" default="true" 
            help="Set active to false to hide the payment method without removing it." />
    </model>

    <optionset id="Pos.PosPaymentMethodUseTerminal" name="Payment Terminal Usage">
        <option value="adyen" name="Adyen" />
        <option value="stripe" name="Stripe" />
    </optionset>
</buvi>
