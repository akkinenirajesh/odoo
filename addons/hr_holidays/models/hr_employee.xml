xml
<buvi>
  <model id="Hr.HrEmployeeBase" name="HrEmployeeBase" description="HR Employee Base" abstract="true">
    <field name="LeaveManagerId" type="Core.User" label="Time Off"
           help="Select the user responsible for approving 'Time Off' of this employee. If empty, the approval is done by an Administrator or Approver (determined in settings/users)."
           domain="[('Share', '=', false), ('CompanyIds', 'in', CompanyId)]" />
    <field name="RemainingLeaves" type="float" label="Remaining Paid Time Off" computed="true"
           help="Total number of paid time off allocated to this employee, change this value to create allocation/time off request. Total based on all the time off types without overriding limit." />
    <field name="CurrentLeaveState" type="Hr.LeaveState" label="Current Time Off Status" computed="true" />
    <field name="LeaveDateFrom" type="date" label="From Date" computed="true" />
    <field name="LeaveDateTo" type="date" label="To Date" computed="true" />
    <field name="LeavesCount" type="float" label="Number of Time Off" computed="true" />
    <field name="AllocationCount" type="float" label="Total number of days allocated" computed="true" />
    <field name="AllocationsCount" type="integer" label="Total number of allocations" computed="true" />
    <field name="ShowLeaves" type="bool" label="Able to see Remaining Time Off" computed="true" />
    <field name="IsAbsent" type="bool" label="Absent Today" computed="true" />
    <field name="AllocationDisplay" type="string" computed="true" />
    <field name="AllocationRemainingDisplay" type="string" computed="true" />
    <field name="HrIconDisplay" type="Hr.HrIconDisplay" />
  </model>

  <optionset id="Hr.LeaveState" name="Leave State">
    <option value="Draft" name="New" />
    <option value="Confirm" name="Waiting Approval" />
    <option value="Refuse" name="Refused" />
    <option value="Validate1" name="Waiting Second Approval" />
    <option value="Validate" name="Approved" />
    <option value="Cancel" name="Cancelled" />
  </optionset>

  <optionset id="Hr.HrIconDisplay" name="HR Icon Display">
    <option value="PresenceHolidayAbsent" name="On leave" />
    <option value="PresenceHolidayPresent" name="Present but on leave" />
  </optionset>
</buvi>
