xml
<buvi>
    <model id="DataRecycle.DataRecycleModel" name="DataRecycleModel" description="Recycling Model">
        <field name="Active" type="bool" default="true" />
        <field name="Name" type="string" required="true" />
        <field name="ResModelId" type="Core.IrModel" label="Model" required="true" />
        <field name="ResModelName" type="string" label="Model Name" readonly="true" />
        <field name="RecycleRecords" type="DataRecycle.DataRecycleRecord" multiple="true" />
        <field name="RecycleMode" type="DataRecycle.RecycleMode" default="Manual" required="true" />
        <field name="RecycleAction" type="DataRecycle.RecycleAction" default="Unlink" required="true" />
        <field name="Domain" type="string" label="Filter" />
        <field name="TimeFieldId" type="Core.IrModelFields" label="Time Field" />
        <field name="TimeFieldDelta" type="integer" label="Delta" default="1" />
        <field name="TimeFieldDeltaUnit" type="DataRecycle.DeltaUnit" default="Months" />
        <field name="IncludeArchived" type="bool" />
        <field name="RecordsToRecycleCount" type="integer" label="Records To Recycle" readonly="true" />
        <field name="NotifyUsers" type="Core.ResUsers" multiple="true" label="Notify Users" 
               help="List of users to notify when there are new records to recycle" />
        <field name="NotifyFrequency" type="integer" label="Notify" default="1" />
        <field name="NotifyFrequencyPeriod" type="DataRecycle.NotifyFrequencyPeriod" default="Weeks" />
        <field name="LastNotification" type="datetime" readonly="true" />
    </model>

    <optionset id="DataRecycle.RecycleMode" name="Recycle Mode">
        <option value="Manual" name="Manual" />
        <option value="Automatic" name="Automatic" />
    </optionset>

    <optionset id="DataRecycle.RecycleAction" name="Recycle Action">
        <option value="Archive" name="Archive" />
        <option value="Unlink" name="Delete" />
    </optionset>

    <optionset id="DataRecycle.DeltaUnit" name="Delta Unit">
        <option value="Days" name="Days" />
        <option value="Weeks" name="Weeks" />
        <option value="Months" name="Months" />
        <option value="Years" name="Years" />
    </optionset>

    <optionset id="DataRecycle.NotifyFrequencyPeriod" name="Notify Frequency Period">
        <option value="Days" name="Days" />
        <option value="Weeks" name="Weeks" />
        <option value="Months" name="Months" />
    </optionset>
</buvi>
