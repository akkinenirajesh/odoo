<buvi>
    <model id="Event.EventEvent" name="EventEvent" description="Event">
        <field name="LeadIds" type="Core.Many2many" relation="Crm.Lead" inverse="EventId" label="Leads" groups="sales_team.group_sale_salesman" 
               help="Leads generated from this event" />
        <field name="LeadCount" type="integer" label="# Leads" compute="ComputeLeadCount" groups="sales_team.group_sale_salesman" />
        <field name="HasLeadRequest" type="bool" label="Ongoing Generation Request" compute="ComputeHasLeadRequest" computeSudo="true"
               help="Set to True when a Lead Generation Request is currently running." />
    </model>
</buvi>
