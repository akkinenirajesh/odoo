xml
<buvi>
    <model id="Sale.SaleOrder" name="Sale.SaleOrder" description="Sales Order">
        <field name="Name" type="string" label="Order Reference" required="true" />
        <field name="PartnerId" type="Res.Partner" label="Customer" required="true" />
        <field name="PartnerInvoiceId" type="Res.Partner" label="Invoice Address" />
        <field name="PartnerShippingId" type="Res.Partner" label="Delivery Address" />
        <field name="OrderLine" type="Sale.OrderLine" collection="true" />
        <field name="State" type="Selection" label="Status" selection="Sale.OrderState" />
        <field name="DateOrder" type="datetime" label="Order Date" />
        <field name="ConfirmationDate" type="datetime" label="Confirmation Date" />
        <field name="ValidityDate" type="datetime" label="Validity Date" />
        <field name="PaymentTermId" type="Account.PaymentTerm" label="Payment Terms" />
        <field name="CurrencyId" type="Res.Currency" label="Currency" />
        <field name="CompanyCurrencyId" type="Res.Currency" label="Company Currency" />
        <field name="Pricelist" type="Product.Pricelist" label="Pricelist" />
        <field name="TeamId" type="Crm.Team" label="Sales Team" />
        <field name="User" type="Res.Users" label="Salesperson" />
        <field name="AnalyticAccountId" type="Account.AnalyticAccount" label="Analytic Account" />
        <field name="FiscalPositionId" type="Account.FiscalPosition" label="Fiscal Position" />
        <field name="Note" type="text" label="Notes" />
        <field name="AmountTotal" type="float" label="Total" readonly="true" />
        <field name="AmountTax" type="float" label="Taxes" readonly="true" />
        <field name="AmountUntaxed" type="float" label="Untaxed Amount" readonly="true" />
        <field name="OrderLineCount" type="integer" label="Lines" readonly="true" />
        <field name="OrderLineCount" type="integer" label="Lines" readonly="true" />
        <field name="IsLocked" type="bool" label="Locked" readonly="true" />
        <field name="IsSent" type="bool" label="Sent" readonly="true" />
    </model>
    <optionset id="Sale.OrderState" name="Sales Order State">
        <option value="Draft" name="Draft" />
        <option value="Sent" name="Quotation Sent" />
        <option value="Sale" name="Sale" />
        <option value="Done" name="Done" />
        <option value="Cancel" name="Cancelled" />
    </optionset>
    <model id="Sale.OrderLine" name="Sale.OrderLine" description="Sales Order Line">
        <field name="SaleOrderId" type="Sale.SaleOrder" />
        <field name="ProductId" type="Product.Product" label="Product" required="true" />
        <field name="Name" type="string" label="Description" />
        <field name="ProductUomQty" type="float" label="Quantity" required="true" />
        <field name="ProductUom" type="Product.Uom" label="Unit of Measure" />
        <field name="PriceUnit" type="float" label="Unit Price" />
        <field name="Discount" type="float" label="Discount (%)" />
        <field name="TaxId" type="Account.Tax" label="Taxes" />
        <field name="PriceSubtotal" type="float" label="Subtotal" readonly="true" />
        <field name="PriceTotal" type="float" label="Total" readonly="true" />
        <field name="QtyDelivered" type="float" label="Delivered" readonly="true" />
        <field name="IsExpense" type="bool" label="Is Expense" />
    </model>
</buvi>
