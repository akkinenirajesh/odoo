<buvi>
  <model id="Stock.BarcodeRule" name="BarcodeRule" description="Barcode Rule">
    <field name="Type" type="selection" label="Type" />
    <field name="Name" type="string" label="Name" required="true" translate="true" />
    <field name="Code" type="char" label="Barcode" required="true" />
    <field name="Product" type="Product.Product" label="Product" />
    <field name="ProductVariant" type="Product.Product" label="Product Variant" />
    <field name="ProductPackaging" type="Product.ProductPackaging" label="Product Packaging" />
    <field name="ProductUom" type="Product.Uom" label="Unit of Measure" />
    <field name="Location" type="Stock.Location" label="Location" />
    <field name="Lot" type="Stock.Lot" label="Lot" />
    <field name="Package" type="Stock.Package" label="Package" />
    <field name="Weight" type="float" label="Weight" />
  </model>
  <optionset id="Stock.BarcodeRuleType" name="Barcode Rule Type">
    <option value="product" name="Product" />
    <option value="variant" name="Product Variant" />
    <option value="packaging" name="Packaging" />
    <option value="uom" name="Unit of Measure" />
    <option value="weight" name="Weighted Product" />
    <option value="location" name="Location" />
    <option value="lot" name="Lot" />
    <option value="package" name="Package" />
  </optionset>
</buvi>
