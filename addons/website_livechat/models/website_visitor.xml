<buvi>
  <model id="Website.WebsiteVisitor" name="Website.WebsiteVisitor" description="Website Visitor">
    <field name="LivechatOperatorId" type="res.partner" label="Speaking with" store="true" index="btree_not_null" collection="true" />
    <field name="LivechatOperatorName" type="string" label="Operator Name" related="LivechatOperatorId.Name" />
    <field name="DiscussChannelIds" type="discuss.channel" collection="true" readonly="true" />
    <field name="SessionCount" type="integer" label="# Sessions" compute="ComputeSessionCount" />
  </model>

  <optionset id="Account.AccountTagApplicability" name="Account Tag Applicability">
    <option value="Accounts" name="Accounts" />
    <option value="Taxes" name="Taxes" />
    <option value="Products" name="Products" />
  </optionset>
</buvi>
