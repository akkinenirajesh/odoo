xml
<buvi>
    <model id="Mail.MailGroup" name="MailGroup" description="Mail Group">
        <field name="Active" type="bool" default="true" />
        <field name="Name" type="string" label="Name" required="true" translate="true" />
        <field name="Description" type="text" label="Description" />
        <field name="Image128" type="image" label="Image" max_width="128" max_height="128" />
        <field name="MailGroupMessageIds" type="Mail.MailGroupMessage" collection="true" label="Pending Messages" />
        <field name="MailGroupMessageLastMonthCount" type="integer" label="Messages Per Month" compute="ComputeMailGroupMessageLastMonthCount" />
        <field name="MailGroupMessageCount" type="integer" label="Messages Count" help="Number of message in this group" compute="ComputeMailGroupMessageCount" />
        <field name="MailGroupMessageModerationCount" type="integer" label="Pending Messages Count" help="Messages that need an action" compute="ComputeMailGroupMessageModerationCount" />
        <field name="IsMember" type="bool" label="Is Member" compute="ComputeIsMember" />
        <field name="MemberIds" type="Mail.MailGroupMember" collection="true" label="Members" />
        <field name="MemberPartnerIds" type="Core.ResPartner" collection="true" label="Partners Member" compute="ComputeMemberPartnerIds" search="SearchMemberPartnerIds" />
        <field name="MemberCount" type="integer" label="Members Count" compute="ComputeMemberCount" />
        <field name="IsModerator" type="bool" label="Moderator" help="Current user is a moderator of the group" compute="ComputeIsModerator" />
        <field name="Moderation" type="bool" label="Moderate this group" />
        <field name="ModerationRuleCount" type="integer" label="Moderated emails count" compute="ComputeModerationRuleCount" />
        <field name="ModerationRuleIds" type="Mail.MailGroupModeration" collection="true" label="Moderated Emails" />
        <field name="ModeratorIds" type="Core.ResUsers" collection="true" label="Moderators" domain="[('GroupsId', 'in', Env.Ref('base.group_user').Id)]" />
        <field name="ModerationNotify" type="bool" label="Automatic notification" help="People receive an automatic notification about their message being waiting for moderation." />
        <field name="ModerationNotifyMsg" type="html" label="Notification message" />
        <field name="ModerationGuidelines" type="bool" label="Send guidelines to new subscribers" help="Newcomers on this moderated group will automatically receive the guidelines." />
        <field name="ModerationGuidelinesMsg" type="html" label="Guidelines" />
        <field name="AccessMode" type="Mail.MailGroupAccessMode" label="Privacy" required="true" default="Public" />
        <field name="AccessGroupId" type="Core.ResGroups" label="Authorized Group" default="Env.Ref('base.group_user')" />
        <field name="CanManageGroup" type="bool" label="Can Manage" help="Can manage the members" compute="ComputeCanManageGroup" />
        <field name="AliasContact" type="Mail.MailAliasContact" />
        <field name="AliasDefaults" type="text" />
        <field name="AliasModelId" type="Core.IrModel" />
        <field name="AliasForceThreadId" type="integer" />
    </model>

    <optionset id="Mail.MailGroupAccessMode" name="Mail Group Access Mode">
        <option value="Public" name="Everyone" />
        <option value="Members" name="Members only" />
        <option value="Groups" name="Selected group of users" />
    </optionset>

    <optionset id="Mail.MailAliasContact" name="Mail Alias Contact">
        <option value="Everyone" name="Everyone" />
        <option value="Followers" name="Followers" />
    </optionset>
</buvi>
