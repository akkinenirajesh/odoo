xml
<buvi>
    <model id="Base.IrEmbeddedActions" name="IrEmbeddedActions" description="Embedded Actions">
        <field name="Name" type="string" label="Embedded Name" translate="true" />
        <field name="Sequence" type="integer" />
        <field name="ParentActionId" type="Base.IrActionsActWindow" required="true" label="Parent Action" ondelete="cascade" />
        <field name="ParentResId" type="integer" label="Active Parent Id" />
        <field name="ParentResModel" type="string" required="true" label="Active Parent Model" />
        <field name="ActionId" type="Base.IrActionsActWindow" label="Action Id" ondelete="cascade" />
        <field name="PythonMethod" type="string" help="Python method returning an action" />
        <field name="UserId" type="Res.Users" label="Embedded user" help="User specific embedded action. If empty, shared embedded action" ondelete="cascade" />
        <field name="IsDeletable" type="bool" compute="ComputeIsDeletable" />
        <field name="DefaultViewMode" type="string" label="Default view" help="Default view (if none, default view of the action is taken)" />
        <field name="FilterIds" type="Base.IrFilters" collection="true" help="Default filter of the embedded action (if none, no filters)" />
        <field name="IsVisible" type="bool" compute="ComputeIsVisible" label="Embedded visibility" help="Computed field to check if the record should be visible according to the domain" />
        <field name="Domain" type="string" label="Domain Value" default="[]" help="Domain applied to the active id of the parent model" />
        <field name="Context" type="string" label="Context Value" default="{}" help="Context dictionary as Python expression, empty by default (Default: {})" />
        <field name="GroupsIds" type="Res.Groups" collection="true" help="Groups that can execute the embedded action. Leave empty to allow everybody." />
        <constraint name="CheckOnlyOneActionDefined" message="Constraint to ensure that either an XML action or a python_method is defined, but not both." >
            <field name="ActionId" />
            <field name="PythonMethod" />
        </constraint>
        <constraint name="CheckPythonMethodRequiresName" message="Constraint to ensure that if a python_method is defined, then the name must also be defined." >
            <field name="PythonMethod" />
            <field name="Name" />
        </constraint>
    </model>
</buvi>
