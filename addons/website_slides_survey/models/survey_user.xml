xml
<buvi>
  <model id="WebsiteSlidesSurvey.SurveyUserInput" name="WebsiteSlidesSurvey.SurveyUserInput" description="Survey User Input">
    <field name="SlideId" type="WebsiteSlides.SlideSlide" label="Related course slide"
      help="The related course slide when there is no membership information" />
    <field name="SlidePartnerId" type="WebsiteSlides.SlideSlidePartner" label="Subscriber information"
      help="Slide membership information for the logged in user"
      index="btree_not_null" />
    <field name="SurveyId" type="Survey.Survey" />
    <field name="PartnerId" type="Res.Partner" />
    <field name="Email" type="string" />
    <field name="InviteToken" type="string" />
    <field name="State" type="selection" collection="true" selection="WebsiteSlidesSurvey.SurveyUserInputState" />
    <field name="ScoringSuccess" type="bool" />
    <field name="AttemptNumber" type="integer" />
    <field name="LastAttemptDate" type="datetime" />
    <field name="Answers" type="Survey.SurveyAnswer" collection="true" />
  </model>
  <optionset id="WebsiteSlidesSurvey.SurveyUserInputState" name="Survey User Input State">
    <option value="draft" name="Draft" />
    <option value="done" name="Done" />
  </optionset>
</buvi>
