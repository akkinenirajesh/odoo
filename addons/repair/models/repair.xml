xml
<buvi>
    <model id="Repair.Repair" name="Repair.Repair" description="Repair Order">
        <field name="Name" type="string" label="Repair Reference" required="true" translate="true" readonly="true" index="trigram" />
        <field name="Company" type="Res.Company" label="Company" readonly="true" required="true" index="true" />
        <field name="State" type="selection" label="Status" readonly="true" copy="false" default="Draft" tracking="true" index="true" collection="true">
            <option value="Draft" name="New" />
            <option value="Confirmed" name="Confirmed" />
            <option value="UnderRepair" name="Under Repair" />
            <option value="Done" name="Repaired" />
            <option value="Cancel" name="Cancelled" />
        </field>
        <field name="Priority" type="selection" default="Normal" label="Priority" collection="true">
            <option value="Normal" name="Normal" />
            <option value="Urgent" name="Urgent" />
        </field>
        <field name="Partner" type="Res.Partner" label="Customer" index="true" changeDefault="true" readonly="false" store="true" />
        <field name="User" type="Res.Users" label="Responsible" checkCompany="true" />
        <field name="InternalNotes" type="html" label="Internal Notes" />
        <field name="Tags" type="Repair.RepairTags" label="Tags" collection="true" />
        <field name="UnderWarranty" type="bool" label="Under Warranty" />
        <field name="ScheduleDate" type="datetime" label="Scheduled Date" index="true" required="true" copy="false" />
        <field name="Move" type="Stock.Move" label="Inventory Move" copy="false" readonly="true" tracking="true" checkCompany="true" />
        <field name="Product" type="Product.Product" label="Product to Repair" checkCompany="true" />
        <field name="ProductQuantity" type="float" label="Product Quantity" readonly="false" store="true" default="1.0" digits="Product Unit of Measure" />
        <field name="ProductUom" type="Uom.Uom" label="Product Unit of Measure" store="true" precompute="true" />
        <field name="ProductUomCategory" type="Uom.UomCategory" related="Product.Uom.Category" />
        <field name="Lot" type="Stock.Lot" label="Lot/Serial" domain="[('id', 'in', AllowedLotIds)]" checkCompany="true" />
        <field name="Tracking" type="selection" string="Product Tracking" related="Product.Tracking" readonly="false" collection="true" />
        <field name="PickingType" type="Stock.PickingType" label="Operation Type" copy="true" readonly="false" store="true" required="true" precompute="true" index="true" checkCompany="true" />
        <field name="ProcurementGroup" type="Procurement.Group" label="Procurement Group" copy="false" />
        <field name="Location" type="Stock.Location" label="Location" store="true" readonly="false" required="true" precompute="true" index="true" checkCompany="true" />
        <field name="LocationDest" type="Stock.Location" label="Added Parts Destination Location" related="PickingType.DefaultLocationDest" depends="PickingType" store="true" readonly="true" required="true" precompute="true" index="true" checkCompany="true" />
        <field name="PartsLocation" type="Stock.Location" label="Removed Parts Destination Location" related="PickingType.DefaultRemoveLocationDest" depends="PickingType" store="true" readonly="true" required="true" precompute="true" index="true" checkCompany="true" />
        <field name="RecycleLocation" type="Stock.Location" label="Recycled Parts Destination Location" store="true" readonly="false" required="true" precompute="true" index="true" checkCompany="true" />
        <field name="Moves" type="Stock.Move" label="Parts" checkCompany="true" copy="true" collection="true" domain="[('RepairLineType', '!=', False)]" />
        <field name="PartsAvailability" type="char" label="Component Status" />
        <field name="PartsAvailabilityState" type="selection" label="Component Status" collection="true">
            <option value="Available" name="Available" />
            <option value="Expected" name="Expected" />
            <option value="Late" name="Late" />
        </field>
        <field name="IsPartsAvailable" type="bool" label="All Parts are available" store="true" />
        <field name="IsPartsLate" type="bool" label="Any Part is late" store="true" />
        <field name="SaleOrder" type="Sale.Order" label="Sale Order" checkCompany="true" readonly="true" copy="false" />
        <field name="SaleOrderLine" type="Sale.OrderLine" checkCompany="true" readonly="true" copy="false" />
        <field name="RepairRequest" type="text" label="Repair Request" related="SaleOrderLine.Name" />
        <field name="Picking" type="Stock.Picking" label="Return" checkCompany="true" domain="[('Return', '!=', False), ('Product', '=?', Product)]" copy="false" />
        <field name="IsReturned" type="bool" label="Returned" />
        <field name="PickingProductIds" type="Product.Product" label="Picking Products" collection="true" />
        <field name="PickingProduct" type="Product.Product" related="Picking.Product" />
        <field name="AllowedLotIds" type="Stock.Lot" label="Allowed Lot Ids" collection="true" />
        <field name="UnreserveVisible" type="bool" label="Allowed to Unreserve Production" />
        <field name="ReserveVisible" type="bool" label="Allowed to Reserve Production" />
    </model>
    <model id="Repair.RepairTags" name="Repair.RepairTags" description="Repair Tags">
        <field name="Name" type="string" label="Tag Name" required="true" />
        <field name="Color" type="integer" label="Color Index" />
    </model>
</buvi>
