xml
<buvi>
  <model id="Mail.ResUsersSettings" name="Mail.ResUsersSettings" description="Res Users Settings">
    <field name="IsDiscussSidebarCategoryChannelOpen" type="bool" label="Is discuss sidebar category channel open?" default="true" />
    <field name="IsDiscussSidebarCategoryChatOpen" type="bool" label="Is discuss sidebar category chat open?" default="true" />
    <field name="PushToTalkKey" type="string" label="Push-To-Talk shortcut" help="String formatted to represent a key with modifiers following this pattern: shift.ctrl.alt.key, e.g: truthy.1.true.b" />
    <field name="UsePushToTalk" type="bool" label="Use the push to talk feature" default="false" />
    <field name="VoiceActiveDuration" type="integer" label="Duration of voice activity in ms" default="200" help="How long the audio broadcast will remain active after passing the volume threshold" />
    <field name="VolumeSettingsIds" type="Mail.ResUsersSettingsVolumes" collection="true" label="Volumes of other partners" />
    <field name="ChannelNotifications" type="selection" label="Channel Notifications" help="This setting will only be applied to channels. Mentions only if not specified." >
      <option value="all" name="All Messages" />
      <option value="no_notif" name="Nothing" />
    </field>
    <field name="MuteUntilDt" type="datetime" label="Mute notifications until" index="true" help="If set, the user will not receive notifications from all the channels until this date." />
  </model>
  <optionset id="Mail.ChannelNotifications" name="Channel Notifications">
    <option value="all" name="All Messages" />
    <option value="no_notif" name="Nothing" />
  </optionset>
</buvi>
