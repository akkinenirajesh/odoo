xml
<buvi>
    <model id="Stock.PickingType" name="PickingType" description="Picking Type">
        <field name="BatchGroupByCarrier" type="bool" label="Carrier" 
               help="Automatically group batches by carriers" />
        <field name="BatchMaxWeight" type="integer" label="Maximum weight per batch"
               help="A transfer will not be automatically added to batches that will exceed this weight if the transfer is added to it. Leave this value as '0' if no weight limit." />
        <field name="WeightUomName" type="string" label="Weight unit of measure label" 
               compute="ComputeWeightUomName" readonly="true" default="GetDefaultWeightUom" />
    </model>

    <model id="Stock.Picking" name="Picking" description="Stock Picking">
        <!-- No new fields defined in the original model, so we don't add any here -->
    </model>
</buvi>
