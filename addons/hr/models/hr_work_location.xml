xml
<buvi>
    <model id="HR.WorkLocation" name="WorkLocation" description="Work Location">
        <field name="Active" type="bool" default="true" />
        <field name="Name" type="string" label="Work Location" required="true" />
        <field name="Company" type="Core.Company" required="true" />
        <field name="LocationType" type="HR.WorkLocationType" label="Location Type" default="Office" required="true" />
        <field name="Address" type="Core.Partner" label="Work Address" required="true" />
        <field name="LocationNumber" type="string" />
    </model>

    <optionset id="HR.WorkLocationType" name="Work Location Type">
        <option value="Home" name="Home" />
        <option value="Office" name="Office" />
        <option value="Other" name="Other" />
    </optionset>
</buvi>
