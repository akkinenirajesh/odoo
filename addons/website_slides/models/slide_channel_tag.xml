xml
<buvi>
    <model id="Website.SlideChannelTagGroup" name="SlideChannelTagGroup" description="Channel/Course Groups">
        <field name="Name" type="string" label="Group Name" required="true" translate="true" />
        <field name="Sequence" type="integer" label="Sequence" default="10" index="true" required="true" />
        <field name="TagIds" type="Website.SlideChannelTag" collection="true" label="Tags" />
        <field name="IsPublished" type="bool" default="true" />
    </model>

    <model id="Website.SlideChannelTag" name="SlideChannelTag" description="Channel/Course Tag">
        <field name="Name" type="string" label="Name" required="true" translate="true" />
        <field name="Sequence" type="integer" label="Sequence" default="10" index="true" required="true" />
        <field name="GroupId" type="Website.SlideChannelTagGroup" label="Group" index="true" required="true" />
        <field name="GroupSequence" type="integer" label="Group sequence" index="true" readonly="true" />
        <field name="ChannelIds" type="Website.SlideChannel" collection="true" label="Channels" />
        <field name="Color" type="integer" label="Color Index" default="lambda self: randint(1, 11)"
            help="Tag color used in both backend and website. No color means no display in kanban or front-end, to distinguish internal tags from public categorization tags" />
    </model>
</buvi>
