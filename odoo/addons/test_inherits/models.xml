xml
<buvi>
    <model id="Test.Unit" name="Test.Unit" description="Test Unit">
        <field name="Name" type="string" label="Name" required="true" translate="true" />
        <field name="State" type="selection" label="State" selection="Test.Unit.State" />
        <field name="Surname" type="string" compute="ComputeSurname" />
        <field name="LineIds" type="one2many" collection="true" relation="Test.UnitLine"  />
        <field name="ReadonlyName" type="string" readonly="true" label="Readonly Name" />
        <field name="Size" type="integer" />
    </model>
    <optionset id="Test.Unit.State" name="Unit State">
        <option value="a" name="A" />
        <option value="b" name="B" />
    </optionset>
    <model id="Test.UnitLine" name="Test.UnitLine" description="Test Unit Line">
        <field name="Name" type="string" label="Name" required="true" />
        <field name="UnitId" type="many2one" relation="Test.Unit" required="true" />
    </model>
    <model id="Test.Box" name="Test.Box" description="Test Box" inherits="Test.Unit" inherit_field="UnitId">
        <field name="FieldInBox" type="string" label="Field1" />
        <field name="Size" type="integer" />
    </model>
    <model id="Test.Pallet" name="Test.Pallet" description="Test Pallet" inherits="Test.Box" inherit_field="BoxId">
        <field name="FieldInPallet" type="string" label="Field2" />
    </model>
    <model id="Test.AnotherUnit" name="Test.AnotherUnit" description="Another Test Unit">
        <field name="Val1" type="integer" label="Value 1" required="true" />
    </model>
    <model id="Test.AnotherBox" name="Test.AnotherBox" description="Another Test Box" inherits="Test.AnotherUnit" inherit_field="AnotherUnitId">
        <field name="Val2" type="integer" label="Value 2" required="true" />
    </model>
</buvi>
