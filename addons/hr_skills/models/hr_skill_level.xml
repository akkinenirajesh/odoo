xml
<buvi>
    <model id="HrSkills.SkillLevel" name="SkillLevel" description="Skill Level">
        <field name="SkillTypeId" type="HrSkills.SkillType" label="Skill Type" required="true" />
        <field name="Name" type="string" required="true" />
        <field name="LevelProgress" type="integer" label="Progress" 
               help="Progress from zero knowledge (0%) to fully mastered (100%)." />
        <field name="DefaultLevel" type="bool" 
               help="If checked, this level will be the default one selected when choosing this skill." />
        <constraint type="check">
            <condition>LevelProgress BETWEEN 0 AND 100</condition>
            <message>Progress should be a number between 0 and 100.</message>
        </constraint>
    </model>
</buvi>
