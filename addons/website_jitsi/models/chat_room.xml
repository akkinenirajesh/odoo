xml
<buvi>
    <model id="WebsiteJitsi.ChatRoom" name="ChatRoom" description="Chat Room">
        <field name="Name" type="string" label="Room Name" required="true" translate="true" />
        <field name="IsFull" type="bool" label="Full" />
        <field name="JitsiServerDomain" type="string" label="Jitsi Server Domain" />
        <field name="LangId" type="Core.ResLang" label="Language" />
        <field name="MaxCapacity" type="Selection" label="Max capacity" required="true">
            <option value="4" name="4" />
            <option value="8" name="8" />
            <option value="12" name="12" />
            <option value="16" name="16" />
            <option value="20" name="20" />
            <option value="NoLimit" name="No limit" />
        </field>
        <field name="ParticipantCount" type="integer" label="Participant count" default="0" />
        <field name="LastActivity" type="datetime" label="Last Activity" readonly="true" />
        <field name="MaxParticipantReached" type="integer" label="Max participant reached" readonly="true" />
    </model>
</buvi>
