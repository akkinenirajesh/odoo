xml
<buvi>
    <model id="Event.EventRegistration" name="EventRegistration" description="Event Registration">
        <field name="SaleOrderId" type="Sale.SaleOrder" label="Sales Order" />
        <field name="SaleOrderLineId" type="Sale.SaleOrderLine" label="Sales Order Line" />
        <field name="SaleStatus" type="Event.EventRegistrationSaleStatus" label="Sale Status" compute="ComputeRegistrationStatus" store="true" />
        <field name="State" type="Event.EventRegistrationState" compute="ComputeRegistrationStatus" store="true" />
        <field name="UtmCampaignId" type="Utm.UtmCampaign" compute="ComputeUtmCampaignId" store="true" />
        <field name="UtmSourceId" type="Utm.UtmSource" compute="ComputeUtmSourceId" store="true" />
        <field name="UtmMediumId" type="Utm.UtmMedium" compute="ComputeUtmMediumId" store="true" />
    </model>

    <optionset id="Event.EventRegistrationSaleStatus" name="Event Registration Sale Status">
        <option value="ToPay" name="Not Sold" />
        <option value="Sold" name="Sold" />
        <option value="Free" name="Free" />
    </optionset>

    <optionset id="Event.EventRegistrationState" name="Event Registration State">
        <option value="Draft" name="Draft" />
        <option value="Open" name="Open" />
        <option value="Cancel" name="Cancelled" />
    </optionset>
</buvi>
