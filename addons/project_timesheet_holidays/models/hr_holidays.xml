xml
<buvi>
    <model id="ProjectTimesheetHolidays.HolidaysType" name="HolidaysType" description="Holidays Type">
        <inherit id="hr.leave.type" />
        <field name="TimesheetGenerate" type="bool" label="Generate Timesheets" readonly="false"
            help="If checked, when validating a time off, timesheet will be generated in the Vacation Project of the company." />
        <field name="TimesheetProject" type="Project.Project" label="Project" readonly="false" collection="true"
            domain="[('Company', 'in', [False, Company])]" />
        <field name="TimesheetTask" type="Project.Task" label="Task" readonly="false" collection="true"
            domain="[('Project', '=', TimesheetProject), ('Project', '!=', False), ('Company', 'in', [False, Company])]" />
    </model>

    <model id="ProjectTimesheetHolidays.Holidays" name="Holidays" description="Holidays">
        <inherit id="hr.leave" />
        <field name="TimesheetIds" type="Account.AnalyticLine" label="Analytic Lines" collection="true" />
    </model>
</buvi>
