xml
<buvi>
  <model id="WebsiteCrmIapReveal.CRMRevealRule" name="CRMRevealRule" description="CRM Lead Generation Rules">
    <field name="Name" type="string" label="Rule Name" required="true" />
    <field name="Active" type="bool" default="true" />
    <field name="Countries" type="Core.Country" collection="true" label="Countries" help="Only visitors of following countries will be converted into leads/opportunities (using GeoIP)." />
    <field name="Website" type="Website.Website" help="Restrict Lead generation to this website." />
    <field name="States" type="ResCountry.State" collection="true" label="States" help="Only visitors of following states will be converted into leads/opportunities." />
    <field name="RegexUrl" type="string" label="URL Expression" help="Regex to track website pages. Leave empty to track the entire website, or / to target the homepage. Example: /page* to track all the pages which begin with /page" />
    <field name="Sequence" type="integer" help="Used to order the rules with same URL and countries. Rules with a lower sequence number will be processed first." />
    <field name="Industries" type="CrmIapLead.Industry" collection="true" label="Industries" help="Leave empty to always match. Odoo will not create lead if no match" />
    <field name="FilterOnSize" type="bool" label="Filter on Size" default="true" help="Filter companies based on their size." />
    <field name="CompanySizeMin" type="integer" label="Company Size" default="0" />
    <field name="CompanySizeMax" type="integer" default="1000" />
    <field name="ContactFilterType" type="WebsiteCrmIapReveal.CRMRevealRuleContactFilterType" required="true" default="Role" />
    <field name="PreferredRole" type="CrmIapLead.Role" label="Preferred Role" />
    <field name="OtherRoles" type="CrmIapLead.Role" collection="true" label="Other Roles" />
    <field name="Seniority" type="CrmIapLead.Seniority" label="Seniority" />
    <field name="NumberOfContacts" type="integer" label="Number of Contacts" help="This is the number of contacts to track if their role/seniority match your criteria. Their details will show up in the history thread of generated leads/opportunities. One credit is consumed per tracked contact." default="1" />
    <field name="DataTracking" type="WebsiteCrmIapReveal.CRMRevealRuleLeadFor" required="true" default="Companies" help="Choose whether to track companies only or companies and their contacts" />
    <field name="Type" type="WebsiteCrmIapReveal.CRMRevealRuleLeadType" required="true" default="Opportunity" />
    <field name="Suffix" type="string" help="This will be appended in name of generated lead so you can identify lead/opportunity is generated with this rule" />
    <field name="SalesTeam" type="Crm.Team" />
    <field name="Tags" type="Crm.Tag" collection="true" />
    <field name="Salesperson" type="Res.Users" />
    <field name="Priority" type="Crm.LeadPriority" />
    <field name="GeneratedLeadOpportunity" type="Crm.Lead" collection="true" />
    <field name="NumberOfGeneratedLeads" type="integer" label="Number of Generated Leads" readonly="true" />
    <field name="NumberOfGeneratedOpportunity" type="integer" label="Number of Generated Opportunity" readonly="true" />
    <constraint name="limit_extra_contacts" type="check" message="Maximum 5 contacts are allowed!">NumberOfContacts >= 1 and NumberOfContacts <= 5</constraint>
  </model>

  <optionset id="WebsiteCrmIapReveal.CRMRevealRuleContactFilterType" name="Contact Filter Type">
    <option value="Role" name="Role" />
    <option value="Seniority" name="Seniority" />
  </optionset>
  <optionset id="WebsiteCrmIapReveal.CRMRevealRuleLeadFor" name="Lead For">
    <option value="Companies" name="Companies" />
    <option value="People" name="Companies and their Contacts" />
  </optionset>
  <optionset id="WebsiteCrmIapReveal.CRMRevealRuleLeadType" name="Lead Type">
    <option value="Lead" name="Lead" />
    <option value="Opportunity" name="Opportunity" />
  </optionset>
</buvi>
