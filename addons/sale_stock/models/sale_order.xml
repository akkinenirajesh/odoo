xml
<buvi>
    <model id="Sale.SaleOrder" name="Sale.SaleOrder" description="Sale Order">
        <field name="Incoterm" type="Account.Incoterms" label="Incoterm" help="International Commercial Terms are a series of predefined commercial terms used in international transactions." />
        <field name="IncotermLocation" type="string" label="Incoterm Location" />
        <field name="PickingPolicy" type="Sale.PickingPolicy" required="true" default="Direct" help="If you deliver all products at once, the delivery order will be scheduled based on the greatest product lead time. Otherwise, it will be based on the shortest." />
        <field name="Warehouse" type="Stock.Warehouse" required="true" collection="true"  readonly="false" precompute="true" check_company="true" />
        <field name="PickingIds" type="Stock.Picking" collection="true" label="Transfers" />
        <field name="DeliveryCount" type="integer" label="Delivery Orders" />
        <field name="DeliveryStatus" type="Sale.DeliveryStatus" store="true" help="Red: Late\nOrange: To process today\nGreen: On time" />
        <field name="ProcurementGroupId" type="Procurement.Group" label="Procurement Group" copy="false" />
        <field name="EffectiveDate" type="datetime" label="Effective Date" store="true" help="Completion date of the first delivery order." />
        <field name="ExpectedDate" type="datetime" help="Delivery date you can promise to the customer, computed from the minimum lead time of the order lines in case of Service products. In case of shipping, the shipping policy of the order will be taken into account to either use the minimum or maximum lead time of the order lines." />
        <field name="JsonPopover" type="string" label="JSON data for the popover widget" />
        <field name="ShowJsonPopover" type="bool" label="Has late picking" />
    </model>

    <optionset id="Sale.PickingPolicy" name="Shipping Policy">
        <option value="Direct" name="As soon as possible" />
        <option value="One" name="When all products are ready" />
    </optionset>

    <optionset id="Sale.DeliveryStatus" name="Delivery Status">
        <option value="Pending" name="Not Delivered" />
        <option value="Partial" name="Partially Delivered" />
        <option value="Full" name="Fully Delivered" />
    </optionset>
</buvi>
