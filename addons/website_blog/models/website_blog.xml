xml
<buvi>
    <model id="Website.Blog" name="Website.Blog" description="Blog">
        <field name="Name" type="string" label="Blog Name" required="true" translate="true" />
        <field name="Subtitle" type="string" label="Blog Subtitle" translate="true" />
        <field name="Active" type="bool" default="true" />
        <field name="Content" type="html" label="Content" translate="true" sanitize="false" />
        <field name="BlogPostIds" type="Website.BlogPost" collection="true" />
        <field name="BlogPostCount" type="integer" label="Posts" compute="ComputeBlogPostCount" />
    </model>

    <model id="Website.BlogTagCategory" name="Website.BlogTagCategory" description="Blog Tag Category">
        <field name="Name" type="string" label="Name" required="true" translate="true" />
        <field name="TagIds" type="Website.BlogTag" collection="true" />
        <unique>
            <field name="Name" />
            <message>Tag category already exists!</message>
        </unique>
    </model>

    <model id="Website.BlogTag" name="Website.BlogTag" description="Blog Tag">
        <field name="Name" type="string" label="Name" required="true" translate="true" />
        <field name="CategoryId" type="Website.BlogTagCategory" label="Category" />
        <field name="PostIds" type="Website.BlogPost" collection="true" />
        <unique>
            <field name="Name" />
            <message>Tag name already exists!</message>
        </unique>
    </model>

    <model id="Website.BlogPost" name="Website.BlogPost" description="Blog Post">
        <field name="Name" type="string" label="Title" required="true" translate="true" />
        <field name="Subtitle" type="string" label="Sub Title" translate="true" />
        <field name="AuthorId" type="Res.Partner" label="Author" />
        <field name="AuthorAvatar" type="binary" label="Avatar" readonly="true" />
        <field name="AuthorName" type="string" label="Author Name" readonly="true" />
        <field name="Active" type="bool" default="true" />
        <field name="BlogId" type="Website.Blog" label="Blog" required="true" />
        <field name="TagIds" type="Website.BlogTag" collection="true" label="Tags" />
        <field name="Content" type="html" label="Content" translate="true" sanitize="false" />
        <field name="Teaser" type="text" label="Teaser" translate="true" compute="ComputeTeaser" inverse="SetTeaser" />
        <field name="TeaserManual" type="text" label="Teaser Content" translate="true" />
        <field name="WebsiteMessageId" type="Mail.Message" collection="true" />
        <field name="CreateDate" type="datetime" label="Created on" readonly="true" />
        <field name="PublishedDate" type="datetime" label="Published Date" />
        <field name="PostDate" type="datetime" label="Publishing date" compute="ComputePostDate" inverse="SetPostDate" store="true" />
        <field name="CreateUid" type="Res.Users" label="Created by" readonly="true" />
        <field name="WriteDate" type="datetime" label="Last Updated on" readonly="true" />
        <field name="WriteUid" type="Res.Users" label="Last Contributor" readonly="true" />
        <field name="Visits" type="integer" label="No of Views" readonly="true" default="0" />
        <field name="WebsiteId" type="Website" label="Website" readonly="true" />
    </model>
</buvi>
