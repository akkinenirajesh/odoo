xml
<buvi>
  <model id="Base.IrRule" name="IrRule" description="Record Rule">
    <field name="Name" type="string" label="Name" index="true" />
    <field name="Active" type="bool" default="true" 
        help="If you uncheck the active field, it will disable the record rule without deleting it (if you delete a native record rule, it may be re-created when you reload the module)." />
    <field name="Model" type="Base.IrModel" label="Model" required="true" collection="true" />
    <field name="Groups" type="Res.Groups" label="Groups" collection="true" />
    <field name="DomainForce" type="text" label="Domain" />
    <field name="PermRead" type="bool" label="Read" default="true" />
    <field name="PermWrite" type="bool" label="Write" default="true" />
    <field name="PermCreate" type="bool" label="Create" default="true" />
    <field name="PermUnlink" type="bool" label="Delete" default="true" />
    <constraint name="no_access_rights" 
                message="Rule must have at least one checked access right!"
                expr="PermRead != False or PermWrite != False or PermCreate != False or PermUnlink != False" />
  </model>
</buvi>
