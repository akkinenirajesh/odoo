               groups="hr_attendance.group_hr_attendance_officer" />
        <field name="HoursToday" type="float" label="Hours Today" readonly="true" 
               groups="hr_attendance.group_hr_attendance_officer" />
        <field name="LastAttendance" type="HrAttendance.HrAttendance" label="Last Attendance" readonly="true" 
               groups="hr_attendance.group_hr_attendance_officer" />
        <field name="TotalOvertime" type="float" label="Total Overtime" readonly="true" 
               groups="hr_attendance.group_hr_attendance_officer" />
