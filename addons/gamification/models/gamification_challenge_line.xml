xml
<buvi>
    <model id="Gamification.ChallengeLine" name="ChallengeLine" description="Gamification generic goal for challenge">
        <field name="ChallengeId" type="Gamification.Challenge" label="Challenge" required="true" />
        <field name="DefinitionId" type="Gamification.GoalDefinition" label="Goal Definition" required="true" />
        <field name="Sequence" type="integer" default="1" />
        <field name="TargetGoal" type="float" label="Target Value to Reach" required="true" />
        <field name="Name" type="string" label="Name" />
        <field name="Condition" type="Gamification.GoalCondition" label="Condition" />
        <field name="DefinitionSuffix" type="string" label="Unit" />
        <field name="DefinitionMonetary" type="bool" label="Monetary" />
        <field name="DefinitionFullSuffix" type="string" label="Suffix" />
    </model>

    <optionset id="Gamification.GoalCondition" name="Goal Condition">
        <!-- Add options based on the actual conditions used in Odoo -->
        <option value="Higher" name="Higher" />
        <option value="Lower" name="Lower" />
        <!-- Add more options as needed -->
    </optionset>
</buvi>
