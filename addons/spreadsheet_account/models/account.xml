xml
<buvi>
  <model id="Account.Account" name="Account" description="Account">
    <field name="IncludeInitialBalance" type="bool" label="Include Initial Balance" />
  </model>

  <model id="Account.Move" name="Move" description="Move">
    <field name="State" type="Selection" selection="Account.MoveState" />
    <field name="Company" type="Core.Company" />
  </model>

  <model id="Account.MoveLine" name="MoveLine" description="Move Line">
    <field name="Date" type="date" />
    <field name="Account" type="Account.Account" />
    <field name="Move" type="Account.Move" />
    <field name="Debit" type="decimal" />
    <field name="Credit" type="decimal" />
    <field name="Company" type="Core.Company" />
  </model>

  <optionset id="Account.MoveState" name="Move State">
    <option value="posted" name="Posted" />
    <option value="cancel" name="Cancelled" />
  </optionset>

  <optionset id="Account.AccountTagApplicability" name="Account Tag Applicability">
    <option value="Accounts" name="Accounts" />
    <option value="Taxes" name="Taxes" />
    <option value="Products" name="Products" />
  </optionset>
</buvi>
