xml
<buvi>
    <model id="Hr.RecruitmentStage" name="RecruitmentStage" description="Recruitment Stages">
        <field name="Name" type="string" label="Stage Name" required="true" translate="true" />
        <field name="Sequence" type="integer" label="Sequence" default="10" />
        <field name="Jobs" type="Hr.Job[]" label="Job Specific"
            help="Specific jobs that uses this stage. Other jobs will not use this stage." />
        <field name="Requirements" type="string" />
        <field name="Template" type="Mail.Template" label="Email Template"
            help="If set, a message is posted on the applicant using the template when the applicant is set to the stage." />
        <field name="Fold" type="bool" label="Folded in Kanban"
            help="This stage is folded in the kanban view when there are no records in that stage to display." />
        <field name="HiredStage" type="bool" label="Hired Stage"
            help="If checked, this stage is used to determine the hire date of an applicant" />
        <field name="LegendBlocked" type="string" label="Red Kanban Label" required="true" translate="true" default="Blocked" />
        <field name="LegendDone" type="string" label="Green Kanban Label" required="true" translate="true" default="Ready for Next Stage" />
        <field name="LegendNormal" type="string" label="Grey Kanban Label" required="true" translate="true" default="In Progress" />
        <field name="IsWarningVisible" type="bool" compute="ComputeIsWarningVisible" />
    </model>
</buvi>
