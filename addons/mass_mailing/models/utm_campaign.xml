xml
<buvi>
  <model id="MassMailing.UtmCampaign" name="UtmCampaign" description="UTM Campaign">
    <field name="Name" type="string" label="Campaign Name" required="true" translate="true" />
    <field name="CampaignType" type="selection" label="Campaign Type" selection="MassMailing.CampaignType" default="email" />
    <field name="MediumId" type="many2one" relation="MassMailing.Medium" label="Medium" />
    <field name="SourceId" type="many2one" relation="MassMailing.Source" label="Source" />
    <field name="StartDate" type="date" label="Start Date" />
    <field name="EndDate" type="date" label="End Date" />
    <field name="Objective" type="string" label="Objective" />
    <field name="Budget" type="float" label="Budget" />
    <field name="ResponsibleId" type="many2one" relation="Core.User" label="Responsible" />
    <field name="Description" type="text" label="Description" />
    <field name="MailingMailIds" type="many2many" relation="MassMailing.Mailing" collection="true" label="Mass Mailings" groups="MassMailing.GroupMassMailingUser" />
    <field name="MailingMailCount" type="integer" label="Number of Mass Mailing" groups="MassMailing.GroupMassMailingUser" />
    <field name="IsMailingCampaignActivated" type="bool" label="Is Mailing Campaign Activated" />
    <field name="AbTestingMailingsCount" type="integer" label="A/B Test Mailings #"/>
    <field name="AbTestingCompleted" type="bool" label="A/B Testing Campaign Finished" copy="false" readonly="true" store="true" />
    <field name="AbTestingWinnerMailingId" type="many2one" relation="MassMailing.Mailing" label="A/B Campaign Winner Mailing" copy="false" />
    <field name="AbTestingScheduleDatetime" type="datetime" label="Send Final On" default="lambda self: fields.Datetime.now() + relativedelta(days=1)" help="Date that will be used to know when to determine and send the winner mailing"/>
    <field name="AbTestingWinnerSelection" type="selection" label="Winner Selection" selection="MassMailing.AbTestingWinnerSelection" default="OpenedRatio" help="Selection to determine the winner mailing that will be sent." />
    <field name="ReceivedRatio" type="float" label="Received Ratio" />
    <field name="OpenedRatio" type="float" label="Opened Ratio" />
    <field name="RepliedRatio" type="float" label="Replied Ratio" />
    <field name="BouncedRatio" type="float" label="Bounced Ratio" />
  </model>
  <optionset id="MassMailing.CampaignType" name="Campaign Type">
    <option value="email" name="Email" />
    <option value="sms" name="SMS" />
    <option value="letter" name="Letter" />
  </optionset>
  <optionset id="MassMailing.AbTestingWinnerSelection" name="A/B Testing Winner Selection">
    <option value="Manual" name="Manual" />
    <option value="OpenedRatio" name="Highest Open Rate" />
    <option value="ClicksRatio" name="Highest Click Rate" />
    <option value="RepliedRatio" name="Highest Reply Rate" />
  </optionset>
</buvi>
