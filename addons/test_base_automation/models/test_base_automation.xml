xml
<buvi>
  <model id="TestBaseAutomation.LeadTest" name="LeadTest" description="Automated Rule Test">
    <field name="Name" type="string" label="Subject" required="true" />
    <field name="UserId" type="Res.Users" label="Responsible" />
    <field name="State" type="selection" label="Status" readonly="true" default="draft">
      <option value="draft" name="New" />
      <option value="cancel" name="Cancelled" />
      <option value="open" name="In Progress" />
      <option value="pending" name="Pending" />
      <option value="done" name="Closed" />
    </field>
    <field name="Active" type="bool" default="true" />
    <field name="PartnerId" type="Res.Partner" label="Partner" />
    <field name="DateAutomationLast" type="datetime" label="Last Automation" readonly="true" />
    <field name="Employee" type="bool" compute="ComputeEmployeeDeadline" store="true" />
    <field name="LineIds" type="TestBaseAutomation.LineTest" collection="true" />
    <field name="Priority" type="bool" />
    <field name="Deadline" type="bool" compute="ComputeEmployeeDeadline" store="true" />
    <field name="IsAssignedToAdmin" type="bool" label="Assigned to admin user" />
    <field name="StageId" type="TestBaseAutomation.Stage" label="Stage" compute="ComputeStageId" readonly="false" store="true" />
  </model>
  <model id="TestBaseAutomation.LeadThreadTest" name="LeadThreadTest" description="Automated Rule Test With Thread" inherit="TestBaseAutomation.LeadTest">
    <field name="Thread" type="mail.thread" />
  </model>
  <model id="TestBaseAutomation.LineTest" name="LineTest" description="Automated Rule Line Test">
    <field name="Name" type="string" />
    <field name="LeadId" type="TestBaseAutomation.LeadTest" />
    <field name="UserId" type="Res.Users" />
  </model>
  <model id="TestBaseAutomation.ModelWithAccess" name="ModelWithAccess" description="Automated Rule Link Test">
    <field name="Name" type="string" />
    <field name="LinkedId" type="TestBaseAutomation.ModelWithoutAccess" />
  </model>
  <model id="TestBaseAutomation.ModelWithoutAccess" name="ModelWithoutAccess" description="Automated Rule Linked Test">
    <field name="Name" type="string" />
    <field name="AnotherField" type="string" />
  </model>
  <model id="TestBaseAutomation.Project" name="Project" description="Project">
    <field name="Name" type="string" />
    <field name="TaskIds" type="TestBaseAutomation.Task" collection="true" />
    <field name="StageId" type="TestBaseAutomation.Stage" />
    <field name="TagIds" type="TestBaseAutomation.Tag" collection="true" />
    <field name="Priority" type="selection" default="1">
      <option value="0" name="Low" />
      <option value="1" name="Normal" />
      <option value="2" name="High" />
    </field>
    <field name="UserIds" type="Res.Users" collection="true" />
  </model>
  <model id="TestBaseAutomation.Task" name="Task" description="Task">
    <field name="Name" type="string" />
    <field name="ParentId" type="TestBaseAutomation.Task" />
    <field name="ProjectId" type="TestBaseAutomation.Project" compute="ComputeProjectId" readonly="false" store="true" />
  </model>
  <model id="TestBaseAutomation.Stage" name="Stage" description="Stage">
    <field name="Name" type="string" />
  </model>
  <model id="TestBaseAutomation.Tag" name="Tag" description="Tag">
    <field name="Name" type="string" />
  </model>
  <model id="TestBaseAutomation.LeadThread" name="LeadThread" description="Threaded Lead Test" inherit="TestBaseAutomation.LeadTest">
    <field name="Thread" type="mail.thread" />
  </model>
</buvi>
