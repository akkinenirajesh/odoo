xml
<buvi>
    <model id="Digest.DigestTip" name="DigestTip" description="Digest Tips">
        <field name="Sequence" type="integer" default="1"
            help="Used to display digest tip in email template base on order" />
        <field name="Name" type="string" label="Name" translate="true" />
        <field name="UserIds" type="Core.User[]" label="Recipients"
            help="Users having already received this tip" />
        <field name="TipDescription" type="html" label="Tip description" translate="true" sanitize="false" />
        <field name="GroupId" type="Core.Group" label="Authorized Group" />
    </model>
</buvi>
