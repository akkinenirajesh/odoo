xml
<buvi>
  <model id="WebsiteEventTrackQuiz.Quiz" name="WebsiteEventTrackQuiz.Quiz" description="Quiz">
    <field name="Name" type="string" label="Name" required="true" translate="true" />
    <field name="QuestionIds" type="WebsiteEventTrackQuiz.QuizQuestion" collection="true" label="Questions" />
    <field name="EventTrackId" type="Event.Track" readonly="true" />
    <field name="EventId" type="Event.Event" readonly="true" store="true" />
    <field name="Repeatable" type="bool" label="Unlimited Tries"
      help="Let attendees reset the quiz and try again." />
  </model>
  <model id="WebsiteEventTrackQuiz.QuizQuestion" name="WebsiteEventTrackQuiz.QuizQuestion" description="Content Quiz Question">
    <field name="Name" type="string" label="Question" required="true" translate="true" />
    <field name="Sequence" type="integer" label="Sequence" />
    <field name="QuizId" type="WebsiteEventTrackQuiz.Quiz" required="true" />
    <field name="CorrectAnswerId" type="WebsiteEventTrackQuiz.QuizAnswer" collection="true" readonly="true" />
    <field name="AwardedPoints" type="integer" label="Number of Points" readonly="true" />
    <field name="AnswerIds" type="WebsiteEventTrackQuiz.QuizAnswer" collection="true" label="Answer" />
  </model>
  <model id="WebsiteEventTrackQuiz.QuizAnswer" name="WebsiteEventTrackQuiz.QuizAnswer" description="Question's Answer">
    <field name="Sequence" type="integer" label="Sequence" />
    <field name="QuestionId" type="WebsiteEventTrackQuiz.QuizQuestion" required="true" />
    <field name="TextValue" type="string" label="Answer" required="true" translate="true" />
    <field name="IsCorrect" type="bool" label="Correct" default="false" />
    <field name="Comment" type="text" label="Extra Comment" translate="true"
      help="This comment will be displayed to the user if they select this answer, after submitting the quiz. It is used as a small informational text helping to understand why this answer is correct / incorrect." />
    <field name="AwardedPoints" type="integer" label="Points" default="0" />
  </model>
</buvi>
