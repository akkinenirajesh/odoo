xml
<buvi>
    <model id="Stock.Location" name="Location" description="Inventory Locations">
        <field name="Name" type="string" label="Location Name" required="true" />
        <field name="CompleteName" type="string" label="Full Location Name" compute="ComputeCompleteName" store="true" />
        <field name="Active" type="bool" default="true" help="By unchecking the active field, you may hide a location without deleting it." />
        <field name="Usage" type="Stock.LocationUsage" />
        <field name="LocationId" type="Stock.Location" label="Parent Location" ondelete="cascade" />
        <field name="ChildIds" type="Stock.Location" collection="true" />
        <field name="ChildInternalLocationIds" type="Stock.Location" collection="true" label="Internal locations among descendants" compute="ComputeChildInternalLocationIds" recursive="true" help="This location (if it's internal) and all its descendants filtered by type=Internal." />
        <field name="Comment" type="html" label="Additional Information" />
        <field name="PosX" type="integer" label="Corridor (X)" default="0" help="Optional localization details, for information purpose only" />
        <field name="PosY" type="integer" label="Shelves (Y)" default="0" help="Optional localization details, for information purpose only" />
        <field name="PosZ" type="integer" label="Height (Z)" default="0" help="Optional localization details, for information purpose only" />
        <field name="ParentPath" type="string" />
        <field name="CompanyId" type="Res.Company" label="Company" />
        <field name="ScrapLocation" type="bool" label="Is a Scrap Location?" default="false" help="Check this box to allow using this location to put scrapped/damaged goods." />
        <field name="ReturnLocation" type="bool" label="Is a Return Location?" help="Check this box to allow using this location as a return location." />
        <field name="ReplenishLocation" type="bool" copy="false" compute="ComputeReplenishLocation" readonly="false" store="true" help="Activate this function to get all quantities to replenish at this particular location" />
        <field name="RemovalStrategyId" type="Product.Removal" label="Removal Strategy" help="Defines the default method used for suggesting the exact location (shelf) where to take the products from, which lot etc. for this location. This method can be enforced at the product category level, and a fallback is made on the parent locations if none is set here.\n\nFIFO: products/lots that were stocked first will be moved out first.\nLIFO: products/lots that were stocked last will be moved out first.\nCloset location: products/lots closest to the target location will be moved out first.\nFEFO: products/lots with the closest removal date will be moved out first (the availability of this method depends on the \"Expiration Dates\" setting)." />
        <field name="PutawayRuleIds" type="Stock.PutawayRule" collection="true" label="Putaway Rules" />
        <field name="Barcode" type="string" />
        <field name="QuantIds" type="Stock.Quant" collection="true" />
        <field name="CyclicInventoryFrequency" type="integer" label="Inventory Frequency (Days)" default="0" help=" When different than 0, inventory count date for products stored at this location will be automatically set at the defined frequency." />
        <field name="LastInventoryDate" type="date" label="Last Effective Inventory" readonly="true" help="Date of the last inventory at this location." />
        <field name="NextInventoryDate" type="date" label="Next Expected Inventory" compute="ComputeNextInventoryDate" store="true" help="Date for next planned inventory based on cyclic schedule." />
        <field name="WarehouseViewIds" type="Stock.Warehouse" collection="true" readonly="true" />
        <field name="WarehouseId" type="Stock.Warehouse" compute="ComputeWarehouseId" store="true" />
        <field name="StorageCategoryId" type="Stock.StorageCategory" label="Storage Category" />
        <field name="OutgoingMoveLineIds" type="Stock.MoveLine" collection="true" />
        <field name="IncomingMoveLineIds" type="Stock.MoveLine" collection="true" />
        <field name="NetWeight" type="float" label="Net Weight" compute="ComputeWeight" />
        <field name="ForecastWeight" type="float" label="Forecasted Weight" compute="ComputeWeight" />
        <field name="Sequence" type="integer" label="Sequence" related="WarehouseId.Sequence" store="true" />
        <field name="IsEmpty" type="bool" label="Is Empty" compute="ComputeIsEmpty" search="SearchIsEmpty" />
        <unique>
            <field name="Barcode" />
            <field name="CompanyId" />
            <message>The barcode for a location must be unique per company!</message>
        </unique>
        <constraint name="inventory_freq_nonneg" message="The inventory frequency (days) for a location must be non-negative">check(cyclic_inventory_frequency >= 0)</constraint>
    </model>
    <optionset id="Stock.LocationUsage" name="Location Usage">
        <option value="Supplier" name="Vendor Location" />
        <option value="View" name="View" />
        <option value="Internal" name="Internal Location" />
        <option value="Customer" name="Customer Location" />
        <option value="Inventory" name="Inventory Loss" />
        <option value="Production" name="Production" />
        <option value="Transit" name="Transit Location" />
    </optionset>

    <model id="Stock.Route" name="Route" description="Inventory Routes">
        <field name="Name" type="string" label="Route" required="true" translate="true" />
        <field name="Active" type="bool" default="true" help="If the active field is set to False, it will allow you to hide the route without removing it." />
        <field name="Sequence" type="integer" default="0" />
        <field name="RuleIds" type="Stock.Rule" collection="true" copy="true" label="Rules" />
        <field name="ProductSelectable" type="bool" label="Applicable on Product" default="true" help="When checked, the route will be selectable in the Inventory tab of the Product form." />
        <field name="ProductCategSelectable" type="bool" label="Applicable on Product Category" help="When checked, the route will be selectable on the Product Category." />
        <field name="WarehouseSelectable" type="bool" label="Applicable on Warehouse" help="When a warehouse is selected for this route, this route should be seen as the default route when products pass through this warehouse." />
        <field name="PackagingSelectable" type="bool" label="Applicable on Packaging" help="When checked, the route will be selectable on the Product Packaging." />
        <field name="SuppliedWhId" type="Stock.Warehouse" label="Supplied Warehouse" />
        <field name="SupplierWhId" type="Stock.Warehouse" label="Supplying Warehouse" />
        <field name="CompanyId" type="Res.Company" label="Company" />
        <field name="ProductIds" type="Product.Template" collection="true" label="Products" copy="false" />
        <field name="CategIds" type="Product.Category" collection="true" label="Product Categories" copy="false" />
        <field name="PackagingIds" type="Product.Packaging" collection="true" label="Packagings" copy="false" />
        <field name="WarehouseDomainIds" type="Stock.Warehouse" collection="true" compute="ComputeWarehouses" />
        <field name="WarehouseIds" type="Stock.Warehouse" collection="true" label="Warehouses" copy="false" domain="[('id', 'in', WarehouseDomainIds)]" />
    </model>
</buvi>
