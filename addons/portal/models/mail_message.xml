xml
<buvi>
    <model id="Portal.MailMessage" name="MailMessage" description="Mail Message">
        <field name="AttachmentIds" type="many2many" collection="true" relation="Attachment.Attachment" label="Attachments" />
        <field name="AuthorAvatarUrl" type="string" label="Author Avatar Url" />
        <field name="AuthorId" type="many2one" relation="Res.Users" label="Author" />
        <field name="Body" type="text" label="Body" />
        <field name="Date" type="datetime" label="Date" />
        <field name="Id" type="integer" label="ID" />
        <field name="IsInternal" type="bool" label="Internal" />
        <field name="IsMessageSubtypeNote" type="bool" label="Is Note" />
        <field name="PublishedDateStr" type="string" label="Published Date" />
        <field name="SubtypeId" type="many2one" relation="Mail.MessageSubtype" label="Subtype" />
    </model>
</buvi>
