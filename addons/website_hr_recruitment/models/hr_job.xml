xml
<buvi>
    <model id="WebsiteHrRecruitment.Job" name="WebsiteHrRecruitment.Job" description="Job">
        <field name="Description" type="html" label="Job Description" translate="true" sanitize_overridable="true" sanitize_attributes="false" sanitize_form="false" />
        <field name="WebsitePublished" type="bool" help="Set if the application is published on the website of the company." tracking="true" />
        <field name="WebsiteDescription" type="html" label="Website description" translate="true" sanitize_overridable="true" sanitize_attributes="false" sanitize_form="false" />
        <field name="JobDetails" type="html" label="Process Details" translate="true" help="Complementary information that will appear on the job submission page" sanitize_attributes="false" />
        <field name="PublishedDate" type="date" compute="ComputePublishedDate" store="true" />
        <field name="FullUrl" type="char" label="job URL" compute="ComputeFullUrl" />
    </model>
</buvi>
