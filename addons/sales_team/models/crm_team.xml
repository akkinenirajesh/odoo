xml
<buvi>
    <model id="SalesTeam.CrmTeam" name="CrmTeam" description="Sales Team">
        <field name="Name" type="string" label="Sales Team" required="true" translate="true" />
        <field name="Sequence" type="integer" label="Sequence" default="10" />
        <field name="Active" type="bool" default="true"
            help="If the active field is set to false, it will allow you to hide the Sales Team without removing it." />
        <field name="Company" type="Res.Company" label="Company" />
        <field name="Currency" type="Res.Currency" label="Currency" related="Company.Currency" readonly="true" />
        <field name="TeamLeader" type="Res.Users" label="Team Leader" />
        <field name="IsMembershipMulti" type="bool" label="Multiple Memberships Allowed" compute="ComputeIsMembershipMulti"
            help="If True, users may belong to several sales teams. Otherwise membership is limited to a single sales team." />
        <field name="Members" type="Res.Users" collection="true" label="Salespersons"
            domain="['&', ('share', '=', False), ('company_ids', 'in', MemberCompanyIds)]"
            compute="ComputeMembers" inverse="InverseMembers" search="SearchMembers"
            help="Users assigned to this team." />
        <field name="MemberCompanyIds" type="Res.Company" collection="true" compute="ComputeMemberCompanyIds"
            help="UX: Limit to team company or all if no company" />
        <field name="MemberWarning" type="text" label="Membership Issue Warning" compute="ComputeMemberWarning" />
        <field name="CrmTeamMembers" type="SalesTeam.CrmTeamMember" collection="true" label="Sales Team Members"
            context="{'active_test': True}"
            help="Add members to automatically assign their documents to this sales team." />
        <field name="CrmTeamMembersAll" type="SalesTeam.CrmTeamMember" collection="true" label="Sales Team Members (incl. inactive)"
            context="{'active_test': False}" />
        <field name="Color" type="integer" label="Color Index" help="The color of the channel" />
        <field name="FavoriteUsers" type="Res.Users" collection="true" label="Favorite Members"
            default="GetDefaultFavoriteUserIds" />
        <field name="IsFavorite" type="bool" label="Show on dashboard" compute="ComputeIsFavorite" inverse="InverseIsFavorite"
            help="Favorite teams to display them in the dashboard and access them easily." />
        <field name="DashboardButtonName" type="string" label="Dashboard Button" compute="ComputeDashboardButtonName" />
        <field name="DashboardGraphData" type="text" compute="ComputeDashboardGraph" />
    </model>

    <optionset id="SalesTeam.CrmTeamMembershipType" name="Membership Type">
        <option value="Single" name="Single" />
        <option value="Multi" name="Multi" />
    </optionset>
</buvi>
