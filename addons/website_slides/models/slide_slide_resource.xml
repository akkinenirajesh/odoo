xml
<buvi>
    <model id="Website.SlideSlideResource" name="Website.SlideSlideResource" description="Additional resource for a particular slide">
        <field name="SlideId" type="Website.SlideSlide" required="true" ondelete="cascade" />
        <field name="ResourceType" type="Website.SlideSlideResourceType" required="true" />
        <field name="Name" type="string" label="Name" compute="ComputeName" store="true" readonly="false" />
        <field name="Data" type="binary" label="Resource" compute="ComputeResetResources" store="true" readonly="false" />
        <field name="FileName" type="string" store="true" />
        <field name="Link" type="string" label="Link" compute="ComputeResetResources" store="true" readonly="false" />
        <field name="DownloadUrl" type="string" label="Download URL" compute="ComputeDownloadUrl" />
        <field name="Sequence" type="integer" label="Sequence" />
    </model>

    <optionset id="Website.SlideSlideResourceType" name="Slide Slide Resource Type">
        <option value="File" name="File" />
        <option value="Url" name="Link" />
    </optionset>
</buvi>
