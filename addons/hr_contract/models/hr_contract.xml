xml
<buvi>
    <model id="Hr.Contract" name="Contract" description="Contract" inherit="Mail.Thread,Mail.ActivityMixin">
        <field name="Name" type="string" label="Contract Reference" required="true" />
        <field name="Active" type="bool" default="true" />
        <field name="StructureTypeId" type="Hr.PayrollStructureType" label="Salary Structure Type" compute="_ComputeStructureTypeId" readonly="false" store="true" tracking="true" />
        <field name="EmployeeId" type="Hr.Employee" label="Employee" tracking="true" domain="['|', ('CompanyId', '=', false), ('CompanyId', '=', CompanyId)]" index="true" />
        <field name="ActiveEmployee" type="bool" related="EmployeeId.Active" label="Active Employee" />
        <field name="DepartmentId" type="Hr.Department" compute="_ComputeEmployeeContract" store="true" readonly="false" domain="['|', ('CompanyId', '=', false), ('CompanyId', '=', CompanyId)]" label="Department" />
        <field name="JobId" type="Hr.Job" compute="_ComputeEmployeeContract" store="true" readonly="false" domain="['|', ('CompanyId', '=', false), ('CompanyId', '=', CompanyId)]" label="Job Position" />
        <field name="DateStart" type="date" label="Start Date" required="true" default="DateTime.Today" tracking="true" index="true" />
        <field name="DateEnd" type="date" label="End Date" tracking="true" help="End date of the contract (if it's a fixed-term contract)." />
        <field name="TrialDateEnd" type="date" label="End of Trial Period" help="End date of the trial period (if there is one)." />
        <field name="ResourceCalendarId" type="Resource.Calendar" label="Working Schedule" compute="_ComputeEmployeeContract" store="true" readonly="false" default="Env.Company.ResourceCalendarId" copy="false" index="true" tracking="true" domain="['|', ('CompanyId', '=', false), ('CompanyId', '=', CompanyId)]" />
        <field name="Wage" type="decimal" label="Wage" required="true" tracking="true" help="Employee's monthly gross wage." aggregator="avg" />
        <field name="ContractWage" type="decimal" label="Contract Wage" compute="_ComputeContractWage" />
        <field name="Notes" type="html" label="Notes" />
        <field name="State" type="Hr.ContractState" label="Status" group_expand="true" copy="false" tracking="true" help="Status of the contract" default="Draft" />
        <field name="CompanyId" type="Res.Company" compute="_ComputeEmployeeContract" store="true" readonly="false" default="Env.Company" required="true" />
        <field name="CompanyCountryId" type="Res.Country" label="Company country" related="CompanyId.CountryId" readonly="true" />
        <field name="CountryCode" type="string" related="CompanyCountryId.Code" depends="CompanyCountryId" readonly="true" />
        <field name="ContractTypeId" type="Hr.ContractType" label="Contract Type" tracking="true" />
        <field name="ContractsCount" type="integer" related="EmployeeId.ContractsCount" groups="Hr.Contract.GroupHrContractEmployeeManager" />
        <field name="KanbanState" type="Hr.ContractKanbanState" label="Kanban State" default="Normal" tracking="true" copy="false" />
        <field name="CurrencyId" type="Res.Currency" label="Currency" related="CompanyId.CurrencyId" readonly="true" />
        <field name="PermitNo" type="string" label="Work Permit No" related="EmployeeId.PermitNo" readonly="false" />
        <field name="VisaNo" type="string" label="Visa No" related="EmployeeId.VisaNo" readonly="false" />
        <field name="HrResponsibleId" type="Res.User" label="HR Responsible" tracking="true" help="Person responsible for validating the employee's contracts." domain="[('Share', '=', false), ('CompanyIds', 'in', CompanyId), ('GroupsId', 'in', Env.Ref('Hr.GroupHrUser').Id)]" />
        <field name="CalendarMismatch" type="bool" compute="_ComputeCalendarMismatch" compute_sudo="true" />
        <field name="FirstContractDate" type="date" related="EmployeeId.FirstContractDate" />
    </model>

    <optionset id="Hr.ContractState" name="Contract State">
        <option value="Draft" name="New" />
        <option value="Open" name="Running" />
        <option value="Close" name="Expired" />
        <option value="Cancel" name="Cancelled" />
    </optionset>

    <optionset id="Hr.ContractKanbanState" name="Contract Kanban State">
        <option value="Normal" name="Ongoing" />
        <option value="Done" name="Ready" />
        <option value="Blocked" name="Warning" />
    </optionset>
</buvi>
