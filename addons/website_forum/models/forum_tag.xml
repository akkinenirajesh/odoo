xml
<buvi>
  <model id="Website.ForumTag" name="ForumTag" description="Forum Tag">
    <field name="Name" type="string" label="Name" required="true" translate="true" />
    <field name="ForumId" type="Website.Forum" label="Forum" required="true" collection="true" />
    <field name="Posts" type="Website.ForumPost" collection="true" relation="many2many" />
    <field name="PostsCount" type="integer" label="Number of Posts" />
    <field name="WebsiteUrl" type="string" label="Link to questions with the tag" />
    <unique>
      <field name="Name" />
      <field name="ForumId" />
      <message>Tag name already exists!</message>
    </unique>
  </model>
</buvi>
