xml
<buvi>
    <model id="Hr.Department" name="Department" description="HR Department">
        <field name="Name" type="string" label="Department Name" required="true" />
        <field name="ParentId" type="Hr.Department" label="Parent Department" />
    </model>

    <model id="Hr.Job" name="Job" description="HR Job Position">
        <field name="Name" type="string" label="Job Name" required="true" />
        <field name="DepartmentId" type="Hr.Department" label="Department" />
    </model>

    <model id="Hr.WorkLocation" name="WorkLocation" description="Work Location">
        <field name="Name" type="string" label="Location Name" required="true" />
        <field name="AddressId" type="Core.Partner" label="Address" />
    </model>

    <model id="Hr.EmployeeCategory" name="EmployeeCategory" description="Employee Category">
        <field name="Name" type="string" label="Category Name" required="true" />
    </model>

    <model id="Hr.Employee" name="Employee" description="Employee">
        <field name="Name" type="string" label="Employee Name" required="true" />
        <field name="Active" type="bool" default="true" label="Active" />
        <field name="CompanyId" type="Core.Company" label="Company" required="true" />
        <field name="UserId" type="Core.User" label="Related User" />
        <field name="DepartmentId" type="Hr.Department" label="Department" />
        <field name="JobId" type="Hr.Job" label="Job Position" />
        <field name="WorkLocationId" type="Hr.WorkLocation" label="Work Location" />
        <field name="CategoryIds" type="Hr.EmployeeCategory" label="Tags" multiple="true" />
        <field name="ResourceCalendarId" type="Resource.Calendar" label="Working Schedule" />
        <field name="ParentId" type="Hr.Employee" label="Manager" />
    </model>
</buvi>
