xml
<buvi>
    <model id="Hr.User" name="User" description="User">
        <field name="EmployeeIds" type="Hr.Employee" label="Related employee" />
        <field name="EmployeeId" type="Hr.Employee" label="Company employee" compute="ComputeCompanyEmployee" search="SearchCompanyEmployee" />
        <field name="JobTitle" type="string" related="EmployeeId.JobTitle" />
        <field name="WorkPhone" type="string" related="EmployeeId.WorkPhone" />
        <field name="MobilePhone" type="string" related="EmployeeId.MobilePhone" />
        <field name="WorkEmail" type="string" related="EmployeeId.WorkEmail" />
        <field name="CategoryIds" type="Hr.EmployeeCategory" label="Employee Tags" related="EmployeeId.CategoryIds" />
        <field name="DepartmentId" type="Hr.Department" related="EmployeeId.DepartmentId" />
        <field name="AddressId" type="Core.Address" related="EmployeeId.AddressId" />
        <field name="WorkContactId" type="Core.Contact" related="EmployeeId.WorkContactId" />
        <field name="WorkLocationId" type="Hr.WorkLocation" related="EmployeeId.WorkLocationId" />
        <field name="WorkLocationName" type="string" related="EmployeeId.WorkLocationName" />
        <field name="WorkLocationType" type="Hr.WorkLocationType" related="EmployeeId.WorkLocationType" />
        <field name="EmployeeParentId" type="Hr.Employee" related="EmployeeId.ParentId" />
        <field name="CoachId" type="Hr.Employee" related="EmployeeId.CoachId" />
        <field name="PrivateStreet" type="string" label="Private Street" related="EmployeeId.PrivateStreet" />
        <field name="PrivateStreet2" type="string" label="Private Street2" related="EmployeeId.PrivateStreet2" />
        <field name="PrivateCity" type="string" label="Private City" related="EmployeeId.PrivateCity" />
        <field name="PrivateStateId" type="Core.State" label="Private State" related="EmployeeId.PrivateStateId" />
        <field name="PrivateZip" type="string" label="Private Zip" related="EmployeeId.PrivateZip" />
        <field name="PrivateCountryId" type="Core.Country" label="Private Country" related="EmployeeId.PrivateCountryId" />
        <field name="PrivatePhone" type="string" related="EmployeeId.PrivatePhone" />
        <field name="PrivateEmail" type="string" label="Private Email" related="EmployeeId.PrivateEmail" />
        <field name="PrivateLang" type="string" label="Employee Lang" related="EmployeeId.Lang" />
        <field name="KmHomeWork" type="integer" related="EmployeeId.KmHomeWork" />
        <field name="DistanceHomeWork" type="integer" related="EmployeeId.DistanceHomeWork" />
        <field name="DistanceHomeWorkUnit" type="Hr.DistanceUnit" related="EmployeeId.DistanceHomeWorkUnit" />
        <field name="EmployeeBankAccountId" type="Core.BankAccount" label="Employee's Bank Account Number" related="EmployeeId.BankAccountId" />
        <field name="EmployeeCountryId" type="Core.Country" label="Employee's Country" related="EmployeeId.CountryId" />
        <field name="IdentificationId" type="string" related="EmployeeId.IdentificationId" />
        <field name="Ssnid" type="string" related="EmployeeId.Ssnid" />
        <field name="PassportId" type="string" related="EmployeeId.PassportId" />
        <field name="Gender" type="Hr.Gender" related="EmployeeId.Gender" />
        <field name="Birthday" type="date" related="EmployeeId.Birthday" />
        <field name="PlaceOfBirth" type="string" related="EmployeeId.PlaceOfBirth" />
        <field name="CountryOfBirth" type="Core.Country" related="EmployeeId.CountryOfBirth" />
        <field name="Marital" type="Hr.MaritalStatus" related="EmployeeId.Marital" />
        <field name="SpouseCompleteName" type="string" related="EmployeeId.SpouseCompleteName" />
        <field name="SpouseBirthdate" type="date" related="EmployeeId.SpouseBirthdate" />
        <field name="Children" type="integer" related="EmployeeId.Children" />
        <field name="EmergencyContact" type="string" related="EmployeeId.EmergencyContact" />
        <field name="EmergencyPhone" type="string" related="EmployeeId.EmergencyPhone" />
        <field name="VisaNo" type="string" related="EmployeeId.VisaNo" />
        <field name="PermitNo" type="string" related="EmployeeId.PermitNo" />
        <field name="VisaExpire" type="date" related="EmployeeId.VisaExpire" />
        <field name="AdditionalNote" type="string" related="EmployeeId.AdditionalNote" />
        <field name="Barcode" type="string" related="EmployeeId.Barcode" />
        <field name="Pin" type="string" related="EmployeeId.Pin" />
        <field name="Certificate" type="Hr.Certificate" related="EmployeeId.Certificate" />
        <field name="StudyField" type="string" related="EmployeeId.StudyField" />
        <field name="StudySchool" type="string" related="EmployeeId.StudySchool" />
        <field name="EmployeeCount" type="integer" compute="ComputeEmployeeCount" />
        <field name="HrPresenceState" type="Hr.PresenceState" related="EmployeeId.HrPresenceState" />
        <field name="LastActivity" type="date" related="EmployeeId.LastActivity" />
        <field name="LastActivityTime" type="string" related="EmployeeId.LastActivityTime" />
        <field name="EmployeeType" type="Hr.EmployeeType" related="EmployeeId.EmployeeType" />
        <field name="EmployeeResourceCalendarId" type="Hr.ResourceCalendar" label="Employee's Working Hours" related="EmployeeId.ResourceCalendarId" />
        <field name="CreateEmployee" type="bool" default="false" label="Technical field, whether to create an employee" />
        <field name="CreateEmployeeId" type="Hr.Employee" label="Technical field, bind user to this employee on create" />
        <field name="CanEdit" type="bool" compute="ComputeCanEdit" />
        <field name="IsSystem" type="bool" compute="ComputeIsSystem" />
    </model>

    <optionset id="Hr.PresenceState" name="Presence State">
        <option value="Present" name="Present" />
        <option value="Absent" name="Absent" />
        <option value="ToDefine" name="To Define" />
    </optionset>

    <optionset id="Hr.Gender" name="Gender">
        <option value="Male" name="Male" />
        <option value="Female" name="Female" />
        <option value="Other" name="Other" />
    </optionset>

    <optionset id="Hr.MaritalStatus" name="Marital Status">
        <option value="Single" name="Single" />
        <option value="Married" name="Married" />
        <option value="Cohabitant" name="Legal Cohabitant" />
        <option value="Widower" name="Widower" />
        <option value="Divorced" name="Divorced" />
    </optionset>

    <optionset id="Hr.Certificate" name="Certificate Level">
        <option value="Bachelor" name="Bachelor" />
        <option value="Master" name="Master" />
        <option value="Other" name="Other" />
    </optionset>

    <optionset id="Hr.EmployeeType" name="Employee Type">
        <option value="Employee" name="Employee" />
        <option value="Student" name="Student" />
        <option value="Trainee" name="Trainee" />
        <option value="Contractor" name="Contractor" />
        <option value="Freelance" name="Freelancer" />
    </optionset>

    <optionset id="Hr.DistanceUnit" name="Distance Unit">
        <option value="Kilometers" name="Kilometers" />
        <option value="Miles" name="Miles" />
    </optionset>

    <optionset id="Hr.WorkLocationType" name="Work Location Type">
        <option value="Office" name="Office" />
        <option value="Home" name="Home" />
        <option value="Other" name="Other" />
    </optionset>
</buvi>
