xml
<buvi>
    <model id="WebsiteForum.Message" name="Message" description="Mail Message">
        <field name="AuthorId" type="Core.ResPartner" required="true" />
        <field name="Body" type="text" required="true" />
        <field name="Date" type="datetime" required="true" />
        <field name="MessageType" type="selection" selection="WebsiteForum.MessageTypeSelection" required="true" />
        <field name="Model" type="string" required="true" />
        <field name="ResId" type="integer" required="true" />
        <field name="Subtype" type="Mail.MailSubtype" required="true" />
    </model>
    <optionset id="WebsiteForum.MessageTypeSelection" name="Message Type Selection">
        <option value="comment" name="Comment" />
    </optionset>
</buvi>
