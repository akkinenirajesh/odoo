xml
<buvi>
    <model id="HR.ResourceResource" name="ResourceResource" description="Resource Resource">
        <field name="UserId" type="Core.User" copy="false" />
        <field name="Employee" type="HR.Employee" inverse="ResourceId" check-company="true" />
        <field name="JobTitle" type="string" related="Employee.JobTitle" />
        <field name="Department" type="HR.Department" related="Employee.Department" />
        <field name="WorkEmail" type="string" related="Employee.WorkEmail" />
        <field name="WorkPhone" type="string" related="Employee.WorkPhone" />
        <field name="ShowHrIconDisplay" type="bool" related="Employee.ShowHrIconDisplay" />
        <field name="HrIconDisplay" type="HR.HrIconDisplayType" related="Employee.HrIconDisplay" />
        <field name="Avatar128" type="string" computed="true" />
    </model>

    <optionset id="HR.HrIconDisplayType" name="HR Icon Display Type">
        <!-- Add options here based on the actual values used in Odoo -->
    </optionset>
</buvi>
