xml
<buvi>
    <model id="Sale.SaleOrderLine" name="Sale.SaleOrderLine" description="Sale Order Line">
        <field name="ProductUomQty" type="float" label="Quantity" required="true" />
        <field name="QtyDelivered" type="float" label="Delivered Quantity" />
        <field name="ProductId" type="Product.Product" label="Product" required="true" />
        <field name="State" type="selection" label="State" selection="SaleOrderLine.StateSelection" />
        <field name="DisplayQtyWidget" type="bool" />
        <field name="ProductTypeId" type="Product.ProductType" label="Product Type" />
        <field name="QtyDeliveredMethod" type="selection" label="Delivered Qty Method" selection="SaleOrderLine.QtyDeliveredMethodSelection" />
        <field name="MoveIds" type="Stock.StockMove" collection="true" />
        <field name="Company" type="Res.Company" />
        <field name="ProductUom" type="Uom.Uom" />
    </model>

    <optionset id="Sale.SaleOrderLine.StateSelection" name="Sale Order Line State Selection">
        <option value="draft" name="Draft" />
        <option value="sent" name="Sent" />
        <option value="sale" name="Sale" />
    </optionset>

    <optionset id="Sale.SaleOrderLine.QtyDeliveredMethodSelection" name="Sale Order Line Delivered Qty Method Selection">
        <option value="stock_move" name="Stock Move" />
    </optionset>

</buvi>
