xml
<buvi>
    <model id="Base.Company" name="Base.Company" description="Companies">
        <field name="Name" type="string" label="Company Name" required="true" />
        <field name="Active" type="bool" default="true" />
        <field name="Sequence" type="integer" help="Used to order Companies in the company switcher" default="10" />
        <field name="Parent" type="Base.Company" label="Parent Company" collection="true" />
        <field name="Children" type="Base.Company" label="Branches" collection="true" />
        <field name="AllChildren" type="Base.Company" label="All Branches" collection="true" />
        <field name="ParentPath" type="string" />
        <field name="ParentIds" type="Base.Company" label="Parent Companies" collection="true" />
        <field name="Root" type="Base.Company" label="Root Company" />
        <field name="Partner" type="Res.Partner" label="Partner" required="true" />
        <field name="ReportHeader" type="html" label="Company Tagline" translate="true"
            help="Company tagline, which is included in a printed document's header or footer (depending on the selected layout)." />
        <field name="ReportFooter" type="html" label="Report Footer" translate="true"
            help="Footer text displayed at the bottom of all reports." />
        <field name="CompanyDetails" type="html" label="Company Details" translate="true"
            help="Header text displayed at the top of all reports." />
        <field name="IsCompanyDetailsEmpty" type="bool" />
        <field name="Logo" type="binary" label="Company Logo" />
        <field name="LogoWeb" type="binary" label="Company Logo Web" />
        <field name="UsesDefaultLogo" type="bool" label="Uses Default Logo" />
        <field name="Currency" type="Res.Currency" label="Currency" required="true" />
        <field name="Users" type="Res.Users" label="Accepted Users" collection="true" />
        <field name="Street" type="string" />
        <field name="Street2" type="string" />
        <field name="Zip" type="string" />
        <field name="City" type="string" />
        <field name="State" type="Res.Country.State" label="Fed. State" />
        <field name="BankIds" type="Res.Partner.Bank" label="Banks" collection="true" />
        <field name="Country" type="Res.Country" />
        <field name="CountryCode" type="string" />
        <field name="Email" type="string" />
        <field name="Phone" type="string" />
        <field name="Mobile" type="string" />
        <field name="Website" type="string" />
        <field name="Vat" type="string" label="Tax ID" />
        <field name="CompanyRegistry" type="string" label="Company ID" />
        <field name="Paperformat" type="Report.Paperformat" label="Paper format" />
        <field name="ExternalReportLayout" type="Ir.Ui.View" label="Document Template" />
        <field name="Font" type="selection"
            options="[('Lato', 'Lato'), ('Roboto', 'Roboto'), ('Open_Sans', 'Open Sans'), ('Montserrat', 'Montserrat'), ('Oswald', 'Oswald'), ('Raleway', 'Raleway'), ('Tajawal', 'Tajawal')]"
            default="Lato" />
        <field name="PrimaryColor" type="string" />
        <field name="SecondaryColor" type="string" />
        <field name="Color" type="integer" />
        <field name="LayoutBackground" type="selection"
            options="[('Blank', 'Blank'), ('Geometric', 'Geometric'), ('Custom', 'Custom')]"
            default="Blank" required="true" />
        <field name="LayoutBackgroundImage" type="binary" label="Background Image" />
        <field name="UninstalledL10nModuleIds" type="Ir.Module.Module" label="Uninstalled Localization Modules" collection="true" />
        <unique name="name_uniq" field="Name" msg="The company name must be unique!" />
    </model>
</buvi>
