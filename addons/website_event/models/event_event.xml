xml
<buvi>
  <model id="WebsiteEvent.Event" name="Event" description="Event">
    <field name="Name" type="string" label="Event Name" required="true" translate="true" />
    <field name="Subtitle" type="string" label="Event Subtitle" translate="true" />
    <field name="IsParticipating" type="bool" label="Is Participating" compute="ComputeIsParticipating" search="SearchIsParticipating" />
    <field name="IsVisibleOnWebsite" type="bool" label="Visible On Website" compute="ComputeIsVisibleOnWebsite" search="SearchIsVisibleOnWebsite" />
    <field name="EventRegisterUrl" type="string" label="Event Registration Link" compute="ComputeEventRegisterUrl" />
    <field name="WebsiteVisibility" type="WebsiteEvent.WebsiteVisibility" label="Website Visibility" required="true" default="Public" />
    <field name="WebsitePublished" type="bool" />
    <field name="WebsiteMenu" type="bool" label="Website Menu" precompute="true" readonly="false" store="true" />
    <field name="Menu" type="Website.Menu" label="Event Menu" copy="false" />
    <field name="IntroductionMenu" type="bool" label="Introduction Menu" compute="ComputeWebsiteMenuData" readonly="false" store="true" />
    <field name="IntroductionMenus" type="WebsiteEvent.Menu" collection="true" label="Introduction Menus" domain="[('MenuType', '=', 'Introduction')]" />
    <field name="LocationMenu" type="bool" label="Location Menu" compute="ComputeWebsiteMenuData" readonly="false" store="true" />
    <field name="LocationMenus" type="WebsiteEvent.Menu" collection="true" label="Location Menus" domain="[('MenuType', '=', 'LocationMenu')]" />
    <field name="AddressName" type="string" related="Address.Name" />
    <field name="RegisterMenu" type="bool" label="Register Menu" compute="ComputeWebsiteMenuData" readonly="false" store="true" />
    <field name="RegisterMenus" type="WebsiteEvent.Menu" collection="true" label="Register Menus" domain="[('MenuType', '=', 'Register')]" />
    <field name="CommunityMenu" type="bool" label="Community Menu" compute="ComputeCommunityMenu" readonly="false" store="true" />
    <field name="CommunityMenus" type="WebsiteEvent.Menu" collection="true" label="Event Community Menus" domain="[('MenuType', '=', 'Community')]" />
    <field name="IsOngoing" type="bool" label="Is Ongoing" compute="ComputeTimeData" search="SearchIsOngoing" />
    <field name="IsDone" type="bool" label="Is Done" compute="ComputeTimeData" />
    <field name="StartToday" type="bool" label="Start Today" compute="ComputeTimeData" />
    <field name="StartRemaining" type="integer" label="Remaining before start" compute="ComputeTimeData" />
  </model>

  <optionset id="WebsiteEvent.WebsiteVisibility" name="Website Visibility">
    <option value="Public" name="Public" />
    <option value="Link" name="Via a Link" />
    <option value="LoggedUsers" name="Logged Users" />
  </optionset>

  <model id="WebsiteEvent.Menu" name="Menu" description="Event Menu">
    <field name="Name" type="string" label="Menu Name" required="true" translate="true" />
    <field name="Url" type="string" label="Menu URL" />
    <field name="MenuType" type="WebsiteEvent.MenuType" required="true" />
    <field name="Event" type="WebsiteEvent.Event" required="true" />
  </model>

  <optionset id="WebsiteEvent.MenuType" name="Menu Type">
    <option value="Introduction" name="Introduction" />
    <option value="LocationMenu" name="Location" />
    <option value="Register" name="Register" />
    <option value="Community" name="Community" />
  </optionset>

</buvi>
