xml
<buvi>
    <model id="Project.ProjectTaskType" name="ProjectTaskType" description="Task Stage">
        <field name="Active" type="bool" default="true" exportStringTranslation="false" />
        <field name="Name" type="string" label="Name" required="true" translate="true" />
        <field name="Sequence" type="integer" default="1" />
        <field name="Projects" type="Project.Project" relation="many2many" collection="true" label="Projects"
            default="GetDefaultProjectIds"
            help="Projects in which this stage is present. If you follow a similar workflow in several projects, you can share this stage among them and get consolidated information this way." />
        <field name="MailTemplateId" type="Mail.Template" label="Email Template"
            domain="[('Model', '=', 'Project.Task')]"
            help="If set, an email will be automatically sent to the customer when the task reaches this stage." />
        <field name="Fold" type="bool" label="Folded in Kanban" />
        <field name="RatingTemplateId" type="Mail.Template" label="Rating Email Template"
            domain="[('Model', '=', 'Project.Task')]"
            help="If set, a rating request will automatically be sent by email to the customer when the task reaches this stage. Alternatively, it will be sent at a regular interval as long as the task remains in this stage, depending on the configuration of your project. To use this feature make sure that the 'Customer Ratings' option is enabled on your project." />
        <field name="AutoValidationState" type="bool" label="Automatic Kanban Status" default="false"
            help="Automatically modify the state when the customer replies to the feedback for this stage. Good feedback from the customer will update the state to 'Approved' (green bullet). Neutral or bad feedback will set the kanban state to 'Changes Requested' (orange bullet)." />
        <field name="DisabledRatingWarning" type="text" compute="ComputeDisabledRatingWarning" exportStringTranslation="false" />
        <field name="UserId" type="Res.Users" label="Stage Owner" default="DefaultUserId" compute="ComputeUserId" store="true" index="true" />
    </model>
</buvi>
