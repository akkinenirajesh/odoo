xml
<buvi>
  <model id="Project.ProjectTaskRecurrence" name="ProjectTaskRecurrence" description="Task Recurrence">
    <field name="TaskIds" type="Project.ProjectTask" collection="true" />
    <field name="RepeatInterval" type="integer" label="Repeat Every" default="1" />
    <field name="RepeatUnit" type="selection" label="Repeat Unit">
      <option value="day" name="Days" />
      <option value="week" name="Weeks" />
      <option value="month" name="Months" />
      <option value="year" name="Years" />
    </field>
    <field name="RepeatType" type="selection" label="Repeat Type">
      <option value="forever" name="Forever" />
      <option value="until" name="Until" />
    </field>
    <field name="RepeatUntil" type="date" label="End Date" />
  </model>
</buvi>
