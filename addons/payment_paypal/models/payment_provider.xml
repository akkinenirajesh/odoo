xml
<buvi>
  <model id="Payment.PaymentProvider" name="PaymentProvider" description="Payment Provider">
    <field name="Code" type="selection" label="Code" required="true">
      <option value="paypal" name="Paypal" />
    </field>
    <field name="PaypalEmailAccount" type="string" label="Email"
            help="The public business email solely used to identify the account with PayPal"
            required_if_provider="paypal"
            default="lambda self: self.Env.Company.Email" />
    <field name="PaypalPdtToken" type="string" label="PDT Identity Token" groups="base.group_system" />
  </model>
</buvi>
