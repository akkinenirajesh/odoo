xml
<buvi>
    <model id="PointOfSale.PosOrderReport" name="PosOrderReport" description="Point of Sale Orders Report">
        <field name="Date" type="datetime" label="Order Date" readonly="true" />
        <field name="OrderId" type="PointOfSale.PosOrder" label="Order" readonly="true" />
        <field name="PartnerId" type="Res.Partner" label="Customer" readonly="true" />
        <field name="ProductId" type="Product.Product" label="Product" readonly="true" />
        <field name="ProductTmplId" type="Product.Template" label="Product Template" readonly="true" />
        <field name="State" type="selection" label="Status" readonly="true">
            <option value="draft" name="New" />
            <option value="paid" name="Paid" />
            <option value="done" name="Posted" />
            <option value="invoiced" name="Invoiced" />
            <option value="cancel" name="Cancelled" />
        </field>
        <field name="UserId" type="Res.Users" label="User" readonly="true" />
        <field name="PriceTotal" type="float" label="Total Price" readonly="true" />
        <field name="PriceSubTotal" type="float" label="Subtotal w/o discount" readonly="true" />
        <field name="TotalDiscount" type="float" label="Total Discount" readonly="true" />
        <field name="AveragePrice" type="float" label="Average Price" readonly="true" aggregate="avg" />
        <field name="CompanyId" type="Res.Company" label="Company" readonly="true" />
        <field name="NbrLines" type="integer" label="Sale Line Count" readonly="true" />
        <field name="ProductQty" type="integer" label="Product Quantity" readonly="true" />
        <field name="JournalId" type="Account.Journal" label="Journal" readonly="true" />
        <field name="DelayValidation" type="integer" label="Delay Validation" readonly="true" />
        <field name="ProductCategId" type="Product.Category" label="Product Category" readonly="true" />
        <field name="Invoiced" type="bool" readonly="true" />
        <field name="ConfigId" type="PointOfSale.PosConfig" label="Point of Sale" readonly="true" />
        <field name="PricelistId" type="Product.Pricelist" label="Pricelist" readonly="true" />
        <field name="SessionId" type="PointOfSale.PosSession" label="Session" readonly="true" />
        <field name="Margin" type="float" label="Margin" readonly="true" />
        <field name="PaymentMethodId" type="PointOfSale.PosPaymentMethod" label="Payment Method" readonly="true" />
    </model>
</buvi>
