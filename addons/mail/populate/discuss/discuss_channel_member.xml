xml
<buvi>
    <model id="Mail.DiscussChannelMember" name="Mail.DiscussChannelMember" description="Discuss Channel Member">
        <field name="ChannelId" type="Mail.DiscussChannel" required="true" />
        <field name="PartnerId" type="Res.Partner" required="true" />
        <field name="IsActive" type="bool" default="true" />
        <field name="IsMuted" type="bool" default="false" />
        <field name="LastSeen" type="datetime" />
        <field name="Notifications" type="selection" selection="Mail.DiscussChannelMemberNotifications" />
        <field name="MentionNotifications" type="bool" default="true" />
        <field name="PushNotifications" type="bool" default="true" />
        <field name="EmailNotifications" type="bool" default="true" />
        <field name="SoundNotifications" type="bool" default="true" />
        <field name="MessageCount" type="integer" default="0" />
        <field name="UnseenMessageCount" type="integer" default="0" />
        <field name="IsPinned" type="bool" default="false" />
        <field name="IsAdmin" type="bool" default="false" />
    </model>

    <optionset id="Mail.DiscussChannelMemberNotifications" name="Discuss Channel Member Notifications">
        <option value="all" name="All" />
        <option value="mentions" name="Mentions Only" />
        <option value="none" name="None" />
    </optionset>
</buvi>
