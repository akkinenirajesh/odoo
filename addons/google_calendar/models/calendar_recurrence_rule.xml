    <field name="Availability" label="Available/Busy" type="Calendar.CalendarAttendeeInformationAvailable/Busy" readonly="true" copied="true"/>
    <field name="CommonName" label="Common name" type="string" readonly="true"/>
    <field name="Email" label="Email" type="string" readonly="true" transient="true" related-field="Partner.Email"/>
    <field name="Phone" label="Phone" type="string" readonly="true" transient="true" related-field="Partner.Phone"/>
