<buvi>
    <model id="Website.ProductPublicCategory" name="Website.ProductPublicCategory" description="Website Product Category">
        <field name="Name" type="string" label="Name" required="true" translate="true" />
        <field name="Sequence" type="integer" default="DefaultSequence" index="true" />
        <field name="Parent" type="Website.ProductPublicCategory" label="Parent Category" ondelete="cascade" index="true" />
        <field name="Children" type="Website.ProductPublicCategory" collection="true" label="Children Categories" inverse="Parent" />
        <field name="ParentPath" type="string" index="true" />
        <field name="ParentsAndSelf" type="Website.ProductPublicCategory" collection="true" compute="ComputeParentsAndSelf" />
        <field name="ProductTemplates" type="Product.Template" collection="true" relation="product_public_category_product_template_rel" />
        <field name="WebsiteDescription" type="html" label="Category Description" sanitizeAttributes="false" sanitizeForm="false" sanitizeOverridable="true" translate="true" />
        <field name="DisplayName" type="string" compute="ComputeDisplayName" />
    </model>
</buvi>
